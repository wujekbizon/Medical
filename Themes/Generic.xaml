<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Medical.Views"
                    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
                    xmlns:materialIcons="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF">

    <Style TargetType="{x:Type local:WszystkieViewBase}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:WszystkieViewBase}">
                    <Grid Background="{DynamicResource MaterialDesignPaper}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Border Grid.Row="0"
                                Background="{DynamicResource MaterialDesignToolBarBackground}"
                                BorderBrush="{DynamicResource MaterialDesignDivider}"
                                BorderThickness="0,0,0,1"
                                Padding="16,12">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0"
                                           Text="{Binding DisplayName}"
                                           FontSize="18"
                                           FontWeight="Medium"
                                           VerticalAlignment="Center"
                                           Foreground="{DynamicResource MaterialDesignBody}"/>

                                <StackPanel Grid.Column="1"
                                            Orientation="Horizontal">
                                    <Button Command="{Binding LoadCommand}"
                                            Style="{DynamicResource MaterialDesignFlatButton}"
                                            ToolTip="Odśwież listę"
                                            Margin="4,0"
                                            Padding="12,6">
                                        <StackPanel Orientation="Horizontal">
                                            <materialIcons:MaterialIcon Kind="Refresh"
                                                                        Width="18"
                                                                        Height="18"
                                                                        Margin="0,0,8,0"
                                                                        Foreground="{DynamicResource MaterialDesignBody}"/>
                                            <TextBlock Text="Odśwież"
                                                       VerticalAlignment="Center"
                                                       Foreground="{DynamicResource MaterialDesignBody}"/>
                                        </StackPanel>
                                    </Button>

                                    <Button Command="{Binding AddCommand}"
                                            Style="{DynamicResource MaterialDesignRaisedButton}"
                                            ToolTip="Dodaj nowy"
                                            Margin="4,0"
                                            Padding="12,6"
                                            Background="{StaticResource AccentPurple}">
                                        <StackPanel Orientation="Horizontal">
                                            <materialIcons:MaterialIcon Kind="Plus"
                                                                        Width="18"
                                                                        Height="18"
                                                                        Margin="0,0,8,0"
                                                                        Foreground="White"/>
                                            <TextBlock Text="Dodaj"
                                                       VerticalAlignment="Center"
                                                       Foreground="White"/>
                                        </StackPanel>
                                    </Button>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <Border Grid.Row="1"
                                Background="{DynamicResource MaterialDesignCardBackground}"
                                BorderBrush="{DynamicResource MaterialDesignDivider}"
                                BorderThickness="0,0,0,1"
                                Padding="16,12">
                            <Expander Header="Filtry wyszukiwania"
                                      IsExpanded="False"
                                      Style="{DynamicResource MaterialDesignExpander}">
                                <StackPanel Margin="0,12,0,0">
                                    <TextBox materialDesign:HintAssist.Hint="Szukaj..."
                                             Style="{DynamicResource MaterialDesignOutlinedTextBox}"
                                             Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                                             Margin="0,0,0,8">
                                        <TextBox.InputBindings>
                                            <KeyBinding Key="Enter" Command="{Binding SearchCommand}"/>
                                        </TextBox.InputBindings>
                                    </TextBox>
                                </StackPanel>
                            </Expander>
                        </Border>

                        <ContentPresenter Grid.Row="2"
                                          Margin="8"/>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="{x:Type local:JedenViewBase}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:JedenViewBase}">
                    <Grid Background="{DynamicResource MaterialDesignPaper}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Border Grid.Row="0"
                                Background="{DynamicResource MaterialDesignToolBarBackground}"
                                BorderBrush="{DynamicResource MaterialDesignDivider}"
                                BorderThickness="0,0,0,1"
                                Padding="16,12">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <materialIcons:MaterialIcon Kind="FileDocumentEdit"
                                                            Width="24"
                                                            Height="24"
                                                            Grid.Column="0"
                                                            VerticalAlignment="Center"
                                                            Margin="0,0,12,0"
                                                            Foreground="{StaticResource AccentPurple}"/>

                                <TextBlock Grid.Column="1"
                                           Text="{Binding DisplayName}"
                                           FontSize="18"
                                           FontWeight="Medium"
                                           VerticalAlignment="Center"
                                           Foreground="{DynamicResource MaterialDesignBody}"/>
                            </Grid>
                        </Border>

                        <ScrollViewer Grid.Row="1"
                                      VerticalScrollBarVisibility="Auto"
                                      Padding="24,16">
                            <ContentPresenter/>
                        </ScrollViewer>

                        <Border Grid.Row="2"
                                Background="{DynamicResource MaterialDesignToolBarBackground}"
                                BorderBrush="{DynamicResource MaterialDesignDivider}"
                                BorderThickness="0,1,0,0"
                                Padding="16,12">
                            <StackPanel Orientation="Horizontal"
                                        HorizontalAlignment="Right">
                                <Button Command="{Binding CancelCommand}"
                                        Style="{DynamicResource MaterialDesignFlatButton}"
                                        Content="Anuluj"
                                        Margin="0,0,8,0"
                                        Padding="24,8"
                                        ToolTip="Anuluj zmiany"/>

                                <Button Command="{Binding SaveAndCloseCommand}"
                                        Style="{DynamicResource MaterialDesignRaisedButton}"
                                        ToolTip="Zapisz i zamknij"
                                        Background="{StaticResource AccentPurple}">
                                    <StackPanel Orientation="Horizontal">
                                        <materialIcons:MaterialIcon Kind="ContentSaveCheck"
                                                                    Width="18"
                                                                    Height="18"
                                                                    Margin="0,0,8,0"
                                                                    Foreground="White"/>
                                        <TextBlock Text="Zapisz i Zamknij"
                                                   VerticalAlignment="Center"
                                                   Foreground="White"/>
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                        </Border>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
