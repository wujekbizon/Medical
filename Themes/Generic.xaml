<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Medical.Views"
                    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
                    xmlns:materialIcons="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF">

    <Style TargetType="{x:Type local:WszystkieViewBase}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:WszystkieViewBase}">
                    <Grid>
                        <Grid.Background>
                            <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                                <GradientStop Color="#2D3136" Offset="0"/>
                                <GradientStop Color="#1E2124" Offset="1"/>
                            </LinearGradientBrush>
                        </Grid.Background>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Border Grid.Row="0"
                                Background="{DynamicResource IndustrialGunmetal}"
                                BorderBrush="{DynamicResource PurpleBorder20}"
                                BorderThickness="0,0,0,1.5"
                                Padding="20,16">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <Border Grid.Column="0" 
                                    Width="4" 
                                    Background="#9D8FEF" 
                                    CornerRadius="2" 
                                    Margin="0,0,16,0"
                                    VerticalAlignment="Stretch">
                                    <Border.Effect>
                                        <DropShadowEffect BlurRadius="8" ShadowDepth="1" Color="#9D8FEF" Opacity="0.3"/>
                                    </Border.Effect>
                                </Border>

                                <TextBlock Grid.Column="1"
                                       Text="{Binding DisplayName}"
                                       FontSize="18"
                                       FontWeight="Light"
                                       VerticalAlignment="Center"
                                       Foreground="{DynamicResource MaterialDesignBody}"/>
                              
                                <StackPanel Grid.Column="2"
                                            Orientation="Horizontal">
                                    <Button Command="{Binding LoadCommand}"
                                        Style="{DynamicResource MaterialDesignFlatButton}"
                                        ToolTip="Odśwież listę"
                                        Height="36"
                                        Padding="16,8"
                                        Margin="0,0,8,0">
                                        <StackPanel Orientation="Horizontal">
                                            <materialIcons:MaterialIcon Kind="Refresh"
                                                                    Width="18"
                                                                    Height="18"
                                                                    Margin="0,0,8,0"
                                                                    Foreground="{DynamicResource MaterialDesignBody}"/>
                                            <TextBlock Text="Odśwież"
                                                   VerticalAlignment="Center"
                                                   Foreground="{DynamicResource MaterialDesignBody}"/>
                                        </StackPanel>
                                    </Button>
                                    <Button Command="{Binding AddCommand}"
                                        Style="{DynamicResource MaterialDesignRaisedButton}"
                                        ToolTip="Dodaj nowy"
                                        Height="36"
                                        Padding="16,8"
                                        Background="{DynamicResource AccentPurple}">
                                        <StackPanel Orientation="Horizontal">
                                            <materialIcons:MaterialIcon Kind="Plus"
                                                                    Width="18"
                                                                    Height="18"
                                                                    Margin="0,0,8,0"
                                                                    Foreground="White"/>
                                            <TextBlock Text="Dodaj"
                                                   VerticalAlignment="Center"
                                                   Foreground="White"/>
                                        </StackPanel>
                                    </Button>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <materialDesign:Card Grid.Row="1"
                                             UniformCornerRadius="0"
                                             Padding="0"
                                             Margin="0"
                                             Background="{DynamicResource IndustrialGunmetal}"
                                             BorderBrush="{DynamicResource PurpleBorder20}"
                                             BorderThickness="0,0,0,1.5">

                            <Expander Header="Sortowanie i Filtrowanie"
                                              IsExpanded="False"
                                              Foreground="{DynamicResource MaterialDesignBody}"
                                              FontWeight="Normal"
                                              FontSize="14"
                                              Padding="20,12"
                                              Background="Transparent">
                                <Grid >
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="16"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,0,12">
                                        <ComboBox ItemsSource="{Binding SortComboBoxItems}"
                                                  SelectedValue="{Binding SortField, Mode=TwoWay}"
                                                  materialDesign:HintAssist.Hint="Sortowanie"
                                                  BorderBrush="{DynamicResource PurpleBorder20}"
                                                  FontSize="13"
                                                  Style="{DynamicResource MaterialDesignOutlinedComboBox}"/>
                                    </StackPanel>
                                    <Button Grid.Row="1" Grid.Column="0"
                                        Content="Sortuj"
                                        FontSize="13"
                                        Command="{Binding SortCommand}"
                                        Style="{DynamicResource MaterialDesignRaisedButton}"
                                        Background="{DynamicResource AccentPurpleLight}"
                                        Height="36"
                                        HorizontalAlignment="Stretch"/>

                                    <StackPanel Grid.Row="0" Grid.Column="2">
                                       
                                        <ComboBox ItemsSource="{Binding FindComboBoxItems}"
                                                  SelectedValue="{Binding FindField, Mode=TwoWay}"
                                                  materialDesign:HintAssist.Hint="Filtrowanie"
                                                  BorderBrush="{DynamicResource PurpleBorder20}"
                                                  FontSize="13"
                                                  Style="{DynamicResource MaterialDesignOutlinedComboBox}"/>
                                    </StackPanel>
                                    <Grid Grid.Row="1" Grid.Column="2">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="12"/>
                                            <ColumnDefinition Width="120"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBox Grid.Column="0"
                                                 Text="{Binding FindTextBox, UpdateSourceTrigger=PropertyChanged}"
                                                 materialDesign:HintAssist.Hint="Wpisz frazę..."
                                                 BorderBrush="{DynamicResource PurpleBorder20}"
                                                 FontSize="13"
                                                 Style="{DynamicResource MaterialDesignOutlinedTextBox}">
                                            <TextBox.InputBindings>
                                                <KeyBinding Key="Enter" Command="{Binding FindCommand}"/>
                                            </TextBox.InputBindings>
                                        </TextBox>

                                        <Button Grid.Column="2"
                                                Content="Szukaj"
                                                Command="{Binding FindCommand}"
                                                Style="{DynamicResource MaterialDesignRaisedButton}"
                                                Background="{DynamicResource AccentPurpleLight}"
                                                Height="36"/>
                                    </Grid>
                                </Grid>
                            </Expander>
                        </materialDesign:Card>
                        <ScrollViewer Grid.Row="2"
                                      VerticalScrollBarVisibility="Auto"
                                      Focusable="True"
                                      Style="{DynamicResource IndustrialScrollViewer}">
                            <ContentPresenter/>
                        </ScrollViewer>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="{x:Type local:JedenViewBase}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:JedenViewBase}">
                    <Grid>
                        <Grid.Background>
                            <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                                <GradientStop Color="#2D3136" Offset="0"/>
                                <GradientStop Color="#1E2124" Offset="1"/>
                            </LinearGradientBrush>
                        </Grid.Background>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Border Grid.Row="0"
                                Background="{DynamicResource IndustrialGunmetal}"
                                BorderBrush="{DynamicResource PurpleBorder20}"
                                BorderThickness="0,0,0,1.5"
                                Padding="20,16">
                            <TextBlock
                                           Text="{Binding DisplayName}"
                                           FontSize="18"
                                           FontWeight="Light"
                                           VerticalAlignment="Center"
                                           Foreground="{DynamicResource MaterialDesignBody}"/>
                            
                        </Border>
                        <ScrollViewer Grid.Row="1"
                                      VerticalScrollBarVisibility="Auto"
                                      Style="{DynamicResource IndustrialScrollViewer}">
                            <ContentPresenter/>
                        </ScrollViewer>
                        <Border Grid.Row="2"
                                Background="{DynamicResource IndustrialGunmetal}"
                                BorderBrush="{DynamicResource PurpleBorder20}"
                                BorderThickness="0,1.5,0,0"
                                Padding="20,12">
                            <StackPanel Orientation="Horizontal"
                                        HorizontalAlignment="Right">
                                <Button Command="{Binding CancelCommand}"
                                        Style="{DynamicResource MaterialDesignFlatButton}"
                                        Content="Anuluj"
                                        Margin="0,0,8,0"
                                        Padding="24,8"
                                        ToolTip="Anuluj zmiany"/>

                                <Button Command="{Binding SaveAndCloseCommand}"
                                        Style="{DynamicResource MaterialDesignRaisedButton}"
                                        ToolTip="Zapisz i zamknij"
                                        Background="{DynamicResource AccentPurple}">
                                    <StackPanel Orientation="Horizontal">
                                        <materialIcons:MaterialIcon Kind="ContentSaveCheck"
                                                                    Width="18"
                                                                    Height="18"
                                                                    Margin="0,0,8,0"
                                                                    Foreground="White"/>
                                        <TextBlock Text="Zapisz i Zamknij"
                                                   VerticalAlignment="Center"
                                                   Foreground="White"/>
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                        </Border>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
