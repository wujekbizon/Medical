<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">
    <Style x:Key="CardStyle" TargetType="materialDesign:Card">
        <Setter Property="Padding" Value="24"/>
        <Setter Property="UniformCornerRadius" Value="5"/>
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#2D3136" Offset="0"/>
                    <GradientStop Color="#1E2124" Offset="1"/>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
        <Setter Property="BorderBrush" Value="#339D8FEF"/>
        <Setter Property="BorderThickness" Value="2"/>
    </Style>
</ResourceDictionary>