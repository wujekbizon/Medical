<local:JedenViewBase x:Class="Medical.Views.NoweZlecenieWyjazduView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Medical.Views"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:materialIcons="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
             xmlns:viewmodels="clr-namespace:Medical.ViewModels"
             d:DataContext="{d:DesignInstance Type=viewmodels:NoweZlecenieWyjazduViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="1100" d:DesignWidth="900">
    <local:JedenViewBase.Resources>
        <Style x:Key="CardStyle" TargetType="materialDesign:Card">
            <Setter Property="Padding" Value="24"/>
            <Setter Property="UniformCornerRadius" Value="12"/>
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#2D3136" Offset="0"/>
                        <GradientStop Color="#1E2124" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderBrush" Value="#44FFFFFF"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
    </local:JedenViewBase.Resources>
    <Grid Background="{DynamicResource IndustrialGunmetal}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <materialDesign:Card Grid.Row="0"
                            UniformCornerRadius="12"
                            Padding="24"
                            Style="{StaticResource CardStyle}"
                            Margin="16">
            <StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,24">
                    <Border Background="#9D8FEF" Width="4" Height="16" CornerRadius="2" Margin="0,0,12,0"/>
                    <TextBlock Text="Zgłoszenie" 
                               FontSize="15" 
                               FontWeight="Light"
                               Foreground="White"
                               VerticalAlignment="Center"/>
                </StackPanel>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="16"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <DatePicker Grid.Row="0" Grid.Column="0"
                                SelectedDate="{Binding DataCzasZgloszenia, UpdateSourceTrigger=PropertyChanged}"
                                materialDesign:HintAssist.Hint="Data i Czas Zgłoszenia"
                                BorderBrush="#44FFFFFF"
                                Style="{DynamicResource MaterialDesignOutlinedDatePicker}"
                                Margin="0,0,0,16"/>

                    <TextBox Grid.Row="0" Grid.Column="2"
                             Text="{Binding TelefonDzwoniacego, UpdateSourceTrigger=PropertyChanged}"
                             materialDesign:HintAssist.Hint="Telefon Dzwoniącego"
                             BorderBrush="#44FFFFFF"
                             Style="{DynamicResource MaterialDesignOutlinedTextBox}"
                             Margin="0,0,0,16"/>

                    <TextBox Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3"
                             Text="{Binding AdresZdarzenia, UpdateSourceTrigger=PropertyChanged}"
                             materialDesign:HintAssist.Hint="Adres Zdarzenia"
                             BorderBrush="#44FFFFFF"
                             Style="{DynamicResource MaterialDesignOutlinedTextBox}"
                             Margin="0,0,0,16"/>

                    <TextBox Grid.Row="2" Grid.Column="0"
                             Text="{Binding TypZdarzenia, UpdateSourceTrigger=PropertyChanged}"
                             materialDesign:HintAssist.Hint="Typ Zdarzenia"
                             BorderBrush="#44FFFFFF"
                             Style="{DynamicResource MaterialDesignOutlinedTextBox}"
                             Margin="0,0,0,16"/>

                    <TextBox Grid.Row="2" Grid.Column="2"
                             Text="{Binding Priorytet, UpdateSourceTrigger=PropertyChanged}"
                             materialDesign:HintAssist.Hint="Priorytet"
                             BorderBrush="#44FFFFFF"
                             Style="{DynamicResource MaterialDesignOutlinedTextBox}"
                             Margin="0,0,0,16"/>

                    <TextBox Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="3"
                             Text="{Binding OpisZdarzenia, UpdateSourceTrigger=PropertyChanged}"
                             materialDesign:HintAssist.Hint="Opis Zdarzenia"
                             BorderBrush="#44FFFFFF"
                             Style="{DynamicResource MaterialDesignOutlinedTextBox}"
                             AcceptsReturn="True"
                             TextWrapping="Wrap"
                             MinHeight="80"
                             VerticalScrollBarVisibility="Auto"
                             Margin="0,0,0,0"/>
                </Grid>
            </StackPanel>
        </materialDesign:Card>

        <materialDesign:Card Grid.Row="1"
                             UniformCornerRadius="12"
                             Padding="24"
                             Style="{StaticResource CardStyle}"
                             Margin="16">
            <StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,24">
                    <Border Background="#9D8FEF" Width="4" Height="16" CornerRadius="2" Margin="0,0,12,0"/>
                    <TextBlock Text="Dyspozytor, Zespół, Karetka" 
                               FontSize="15" 
                               FontWeight="Light"
                               Foreground="White"
                               VerticalAlignment="Center"/>
                </StackPanel>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0" Margin="0,0,0,16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="8"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBox Grid.Column="0"
                                 Text="{Binding DyspozytorImie, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                 materialDesign:HintAssist.Hint="Dyspozytor"
                                 BorderBrush="#44FFFFFF"
                                 IsEnabled="False"
                                 Style="{DynamicResource MaterialDesignOutlinedTextBox}"/>

                        <Button Grid.Column="2"
                                Command="{Binding ShowPracownicy}"
                                Style="{DynamicResource MaterialDesignRaisedButton}"
                                Background="#1E2124"
                                Height="50"
                                Padding="16,0"
                                ToolTip="Wybierz dyspozytora">
                            <materialIcons:MaterialIcon Kind="AccountTie" Width="24" Height="24" Foreground="White"/>
                        </Button>
                    </Grid>

                    <Grid Grid.Row="1" Margin="0,0,0,16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="8"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBox Grid.Column="0"
                                 Text="{Binding ZespolNazwa, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                 materialDesign:HintAssist.Hint="Nazwa Zespołu"
                                 BorderBrush="#44FFFFFF"
                                 IsEnabled="False"
                                 Style="{DynamicResource MaterialDesignOutlinedTextBox}"/>

                        <Button Grid.Column="2"
                                Command="{Binding ShowZespoly}"
                                Style="{DynamicResource MaterialDesignRaisedButton}"
                                Background="#1E2124"
                                Height="50"
                                Padding="16,0"
                                ToolTip="Wybierz zespół">
                            <materialIcons:MaterialIcon Kind="AccountGroup" Width="24" Height="24" Foreground="White"/>
                        </Button>
                    </Grid>

                    <Grid Grid.Row="2" Margin="0,0,0,16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="8"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBox Grid.Column="0"
                                 Text="{Binding KaretkaNumer, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                 materialDesign:HintAssist.Hint="Numer Karetki (opcjonalne)"
                                 BorderBrush="#44FFFFFF"
                                 IsEnabled="False"
                                 Style="{DynamicResource MaterialDesignOutlinedTextBox}"/>

                        <Button Grid.Column="2"
                                Command="{Binding ShowKaretki}"
                                Style="{DynamicResource MaterialDesignRaisedButton}"
                                Background="#1E2124"
                                Height="50"
                                Padding="16,0"
                                ToolTip="Wybierz karetkę">
                            <materialIcons:MaterialIcon Kind="Ambulance" Width="24" Height="24" Foreground="White"/>
                        </Button>
                    </Grid>
                </Grid>
            </StackPanel>
        </materialDesign:Card>

        <materialDesign:Card Grid.Row="2"
                             UniformCornerRadius="12"
                             Padding="24"
                             Style="{StaticResource CardStyle}"
                             Margin="16">
            <StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,24">
                    <Border Background="#9D8FEF" Width="4" Height="16" CornerRadius="2" Margin="0,0,12,0"/>
                    <TextBlock Text="Czasy i Reakcja" 
                               FontSize="15" 
                               FontWeight="Light"
                               Foreground="White"
                               VerticalAlignment="Center"/>
                </StackPanel>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="16"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <DatePicker Grid.Row="0" Grid.Column="0"
                                SelectedDate="{Binding CzasWyjazdu, UpdateSourceTrigger=PropertyChanged}"
                                materialDesign:HintAssist.Hint="Czas Wyjazdu"
                                BorderBrush="#44FFFFFF"
                                Style="{DynamicResource MaterialDesignOutlinedDatePicker}"
                                Margin="0,0,0,16"/>

                    <TextBox Grid.Row="0" Grid.Column="2"
                             Text="{Binding CzasReakcjiSekundy, Mode=OneWay}"
                             materialDesign:HintAssist.Hint="Czas Reakcji (sekundy)"
                             BorderBrush="#44FFFFFF"
                             IsReadOnly="True"
                             Style="{DynamicResource MaterialDesignOutlinedTextBox}"
                             Margin="0,0,0,16"/>

                    <DatePicker Grid.Row="1" Grid.Column="0"
                                SelectedDate="{Binding CzasPrzyjazduNaMiejsce, UpdateSourceTrigger=PropertyChanged}"
                                materialDesign:HintAssist.Hint="Czas Przyjazdu na Miejsce"
                                BorderBrush="#44FFFFFF"
                                Style="{DynamicResource MaterialDesignOutlinedDatePicker}"
                                Margin="0,0,0,16"/>

                    <DatePicker Grid.Row="1" Grid.Column="2"
                                SelectedDate="{Binding CzasPowrotuDoBazy, UpdateSourceTrigger=PropertyChanged}"
                                materialDesign:HintAssist.Hint="Czas Powrotu do Bazy"
                                BorderBrush="#44FFFFFF"
                                Style="{DynamicResource MaterialDesignOutlinedDatePicker}"
                                Margin="0,0,0,16"/>

                    <TextBox Grid.Row="2" Grid.Column="0"
                             Text="{Binding StatusZlecenia, UpdateSourceTrigger=PropertyChanged}"
                             materialDesign:HintAssist.Hint="Status Zlecenia"
                             BorderBrush="#44FFFFFF"
                             Style="{DynamicResource MaterialDesignOutlinedTextBox}"
                             Margin="0,0,0,16"/>
                </Grid>
            </StackPanel>
        </materialDesign:Card>

        <materialDesign:Card Grid.Row="3"
                             UniformCornerRadius="12"
                             Padding="24"
                             Style="{StaticResource CardStyle}"
                             Margin="16">
            <StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,24">
                    <Border Background="#9D8FEF" Width="4" Height="16" CornerRadius="2" Margin="0,0,12,0"/>
                    <TextBlock Text="Szczegóły Dodatkowe" 
                               FontSize="15" 
                               FontWeight="Light"
                               Foreground="White"
                               VerticalAlignment="Center"/>
                </StackPanel>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="16"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBox Grid.Row="0" Grid.Column="0"
                             Text="{Binding DystansKm, UpdateSourceTrigger=PropertyChanged, StringFormat=N2}"
                             materialDesign:HintAssist.Hint="Dystans (km)"
                             BorderBrush="#44FFFFFF"
                             Style="{DynamicResource MaterialDesignOutlinedTextBox}"
                             Margin="0,0,0,16"/>

                    <TextBox Grid.Row="0" Grid.Column="2"
                             Text="{Binding LiczbaPacjentow, UpdateSourceTrigger=PropertyChanged}"
                             materialDesign:HintAssist.Hint="Liczba Pacjentów"
                             BorderBrush="#44FFFFFF"
                             Style="{DynamicResource MaterialDesignOutlinedTextBox}"
                             Margin="0,0,0,16"/>

                    <TextBox Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3"
                             Text="{Binding WarunkiPogodowe, UpdateSourceTrigger=PropertyChanged}"
                             materialDesign:HintAssist.Hint="Warunki Pogodowe"
                             BorderBrush="#44FFFFFF"
                             Style="{DynamicResource MaterialDesignOutlinedTextBox}"
                             Margin="0,0,0,16"/>

                    <TextBox Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3"
                             Text="{Binding WymaganeDodatkoweWsparcie, UpdateSourceTrigger=PropertyChanged}"
                             materialDesign:HintAssist.Hint="Wymagane Dodatkowe Wsparcie"
                             BorderBrush="#44FFFFFF"
                             Style="{DynamicResource MaterialDesignOutlinedTextBox}"
                             AcceptsReturn="True"
                             TextWrapping="Wrap"
                             MinHeight="60"
                             VerticalScrollBarVisibility="Auto"
                             Margin="0,0,0,0"/>
                </Grid>
            </StackPanel>
        </materialDesign:Card>
    </Grid>
</local:JedenViewBase>
