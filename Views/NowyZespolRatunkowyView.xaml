<local:JedenViewBase x:Class="Medical.Views.NowyZespolRatunkowyView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Medical.Views"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:materialIcons="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
             xmlns:viewmodels="clr-namespace:Medical.ViewModels"
             d:DataContext="{d:DesignInstance Type=viewmodels:NowyZespolRatunkowyViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="900" d:DesignWidth="900">

    <Grid Background="{DynamicResource IndustrialGunmetal}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <materialDesign:Card Grid.Row="0"
                            Padding="24"
                            Style="{StaticResource CardStyle}"
                            Margin="16">
            <StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,24">
                    <Border Background="#9D8FEF" Width="4" Height="16" CornerRadius="2" Margin="0,0,12,0"/>
                    <TextBlock Text="Podstawowe Informacje" 
                               FontSize="15" 
                               FontWeight="Light"
                               Foreground="White"
                               VerticalAlignment="Center"/>
                </StackPanel>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="16"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBox Grid.Row="0" Grid.Column="0"
                             Text="{Binding NazwaZespolu, UpdateSourceTrigger=PropertyChanged}"
                             materialDesign:HintAssist.Hint="Nazwa Zespołu"
                             BorderBrush="#44FFFFFF"
                             Style="{DynamicResource MaterialDesignOutlinedTextBox}"
                             Margin="0,0,0,16"/>

                    <TextBox Grid.Row="0" Grid.Column="2"
                             Text="{Binding LiczbaCzlonkow, UpdateSourceTrigger=PropertyChanged}"
                             materialDesign:HintAssist.Hint="Liczba Członków"
                             BorderBrush="#44FFFFFF"
                             Style="{DynamicResource MaterialDesignOutlinedTextBox}"
                             Margin="0,0,0,16"/>

                    <TextBox Grid.Row="1" Grid.Column="0"
                             Text="{Binding Specjalizacja, UpdateSourceTrigger=PropertyChanged}"
                             materialDesign:HintAssist.Hint="Specjalizacja"
                             BorderBrush="#44FFFFFF"
                             Style="{DynamicResource MaterialDesignOutlinedTextBox}"
                             Margin="0,0,0,16"/>

                    <TextBox Grid.Row="1" Grid.Column="2"
                             Text="{Binding StatusZespolu, UpdateSourceTrigger=PropertyChanged}"
                             materialDesign:HintAssist.Hint="Status Zespołu"
                             BorderBrush="#44FFFFFF"
                             Style="{DynamicResource MaterialDesignOutlinedTextBox}"
                             Margin="0,0,0,16"/>

                    <DatePicker Grid.Row="2" Grid.Column="0"
                                SelectedDate="{Binding DataUtworzenia, UpdateSourceTrigger=PropertyChanged}"
                                materialDesign:HintAssist.Hint="Data Utworzenia"
                                BorderBrush="#44FFFFFF"
                                Style="{DynamicResource MaterialDesignOutlinedDatePicker}"
                                Margin="0,0,0,16"/>

                    <TextBox Grid.Row="2" Grid.Column="2"
                             Text="{Binding Zmiana, UpdateSourceTrigger=PropertyChanged}"
                             materialDesign:HintAssist.Hint="Zmiana"
                             BorderBrush="#44FFFFFF"
                             Style="{DynamicResource MaterialDesignOutlinedTextBox}"
                             Margin="0,0,0,16"/>

                    <TextBox Grid.Row="3" Grid.Column="0"
                             Text="{Binding TelefonKontaktowy, UpdateSourceTrigger=PropertyChanged}"
                             materialDesign:HintAssist.Hint="Telefon Kontaktowy"
                             BorderBrush="#44FFFFFF"
                             Style="{DynamicResource MaterialDesignOutlinedTextBox}"
                             Margin="0,0,0,16"/>

                    <TextBox Grid.Row="3" Grid.Column="2"
                             Text="{Binding Certyfikaty, UpdateSourceTrigger=PropertyChanged}"
                             materialDesign:HintAssist.Hint="Certyfikaty"
                             BorderBrush="#44FFFFFF"
                             Style="{DynamicResource MaterialDesignOutlinedTextBox}"
                             Margin="0,0,0,16"/>
                </Grid>
            </StackPanel>
        </materialDesign:Card>

        <materialDesign:Card Grid.Row="1"
                             Padding="24"
                             Style="{StaticResource CardStyle}"
                             Margin="16">
            <StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,24">
                    <Border Background="#9D8FEF" Width="4" Height="16" CornerRadius="2" Margin="0,0,12,0"/>
                    <TextBlock Text="Statystyki" 
                               FontSize="15" 
                               FontWeight="Light"
                               Foreground="White"
                               VerticalAlignment="Center"/>
                </StackPanel>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="16"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <DatePicker Grid.Row="0" Grid.Column="0"
                                SelectedDate="{Binding DataOstatniegoSzkolenia, UpdateSourceTrigger=PropertyChanged}"
                                materialDesign:HintAssist.Hint="Data Ostatniego Szkolenia"
                                BorderBrush="#44FFFFFF"
                                Style="{DynamicResource MaterialDesignOutlinedDatePicker}"
                                Margin="0,0,0,16"/>

                    <DatePicker Grid.Row="0" Grid.Column="2"
                                SelectedDate="{Binding DataOstatniegoWyjazdu, UpdateSourceTrigger=PropertyChanged}"
                                materialDesign:HintAssist.Hint="Data Ostatniego Wyjazdu"
                                BorderBrush="#44FFFFFF"
                                Style="{DynamicResource MaterialDesignOutlinedDatePicker}"
                                Margin="0,0,0,16"/>

                    <TextBox Grid.Row="1" Grid.Column="0"
                             Text="{Binding SredniaOcena, UpdateSourceTrigger=PropertyChanged, StringFormat=N2}"
                             materialDesign:HintAssist.Hint="Średnia Ocena (1-10)"
                             BorderBrush="#44FFFFFF"
                             Style="{DynamicResource MaterialDesignOutlinedTextBox}"
                             Margin="0,0,0,16"/>

                    <TextBox Grid.Row="1" Grid.Column="2"
                             Text="{Binding LiczbaWszystkichWyjazdow, UpdateSourceTrigger=PropertyChanged}"
                             materialDesign:HintAssist.Hint="Liczba Wszystkich Wyjazdów"
                             BorderBrush="#44FFFFFF"
                             Style="{DynamicResource MaterialDesignOutlinedTextBox}"
                             Margin="0,0,0,16"/>
                </Grid>
            </StackPanel>
        </materialDesign:Card>
        
        <materialDesign:Card Grid.Row="2"
                             Padding="24"
                             Style="{StaticResource CardStyle}"
                             Margin="16">
            <StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,24">
                    <Border Background="#9D8FEF" Width="4" Height="16" CornerRadius="2" Margin="0,0,12,0"/>
                    <TextBlock Text="Karetka i Placówka" 
                               FontSize="15" 
                               FontWeight="Light"
                               Foreground="White"
                               VerticalAlignment="Center"/>
                </StackPanel>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0" Margin="0,0,0,16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="8"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBox Grid.Column="0"
                                 Text="{Binding KaretkaNumer, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                 materialDesign:HintAssist.Hint="Numer Karetki (opcjonalne)"
                                 BorderBrush="#44FFFFFF"
                                 IsEnabled="False"
                                 Style="{DynamicResource MaterialDesignOutlinedTextBox}"/>

                        <Button Grid.Column="2"
                                Command="{Binding ShowKaretki}"
                                Style="{DynamicResource MaterialDesignRaisedButton}"
                                Background="#1E2124"
                                Height="50"
                                Padding="16,0"
                                ToolTip="Wybierz karetkę">
                            <materialIcons:MaterialIcon Kind="Ambulance" Width="24" Height="24" Foreground="White"/>
                        </Button>
                    </Grid>

                    <TextBox Grid.Row="1"
                             Text="{Binding KaretkaTyp, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                             materialDesign:HintAssist.Hint="Typ Karetki"
                             BorderBrush="#44FFFFFF"
                             IsEnabled="False"
                             Style="{DynamicResource MaterialDesignOutlinedTextBox}"
                             Margin="0,0,0,16"/>

                    <Grid Grid.Row="2" Margin="0,0,0,16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="8"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBox Grid.Column="0"
                                 Text="{Binding PlacowkaNazwa, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                 materialDesign:HintAssist.Hint="Nazwa Placówki"
                                 BorderBrush="#44FFFFFF"
                                 IsEnabled="False"
                                 Style="{DynamicResource MaterialDesignOutlinedTextBox}"/>

                        <Button Grid.Column="2"
                                Command="{Binding ShowPlacowki}"
                                Style="{DynamicResource MaterialDesignRaisedButton}"
                                Background="#1E2124"
                                Height="50"
                                Padding="16,0"
                                ToolTip="Wybierz placówkę">
                            <materialIcons:MaterialIcon Kind="Hospital" Width="24" Height="24" Foreground="White"/>
                        </Button>
                    </Grid>

                    <TextBox Grid.Row="3"
                             Text="{Binding PlacowkaMiasto, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                             materialDesign:HintAssist.Hint="Miasto Placówki"
                             BorderBrush="#44FFFFFF"
                             IsEnabled="False"
                             Style="{DynamicResource MaterialDesignOutlinedTextBox}"
                             Margin="0,0,0,16"/>
                </Grid>
            </StackPanel>
        </materialDesign:Card>
    </Grid>
</local:JedenViewBase>
