<UserControl x:Class="Medical.Views.KosztyKaretekView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:materialIcons="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
             xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
             xmlns:viewmodels="clr-namespace:Medical.ViewModels" d:DataContext="{d:DesignInstance Type=viewmodels:KosztyKaretekViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="900">

    <Grid Background="{DynamicResource IndustrialGunmetal}">
        <ScrollViewer VerticalScrollBarVisibility="Auto"
                      Style="{StaticResource IndustrialScrollViewer}"
                      Padding="24">
            <StackPanel>
                <materialDesign:Card Style="{StaticResource CardStyle}" 
                                     Margin="0,0,0,16">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Border Background="{DynamicResource AccentPurple}" 
                                Width="4" 
                                Height="32" 
                                CornerRadius="2" 
                                Margin="0,0,16,0"
                                VerticalAlignment="Center"/>
                        <TextBlock Text="Koszty Utrzymania Karetek wg Placówek" 
                                   FontSize="24" 
                                   FontWeight="Light"
                                   Foreground="White"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                </materialDesign:Card>

                <materialDesign:Card Style="{StaticResource CardStyle}" 
                                     Margin="0,0,0,16">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                            <Border Background="{DynamicResource AccentPurple}" 
                                    Width="4" 
                                    Height="16" 
                                    CornerRadius="2" 
                                    Margin="0,0,12,0"
                                    VerticalAlignment="Center"/>
                            <TextBlock Text="Filtry i Kryteria" 
                                       FontSize="15" 
                                       FontWeight="Light"
                                       Foreground="White"
                                       VerticalAlignment="Center"/>
                        </StackPanel>

                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="16"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <DatePicker Grid.Row="0" Grid.Column="0" 
                                        Margin="0,0,0,16"
                                        SelectedDate="{Binding DataOd, UpdateSourceTrigger=PropertyChanged}"
                                        materialDesign:HintAssist.Hint="Data od"
                                        BorderBrush="#44FFFFFF"
                                        Style="{DynamicResource MaterialDesignOutlinedDatePicker}"/>

                            <DatePicker Grid.Row="0" Grid.Column="2" 
                                        Margin="0,0,0,16"
                                        SelectedDate="{Binding DataDo, UpdateSourceTrigger=PropertyChanged}"
                                        materialDesign:HintAssist.Hint="Data do"
                                        BorderBrush="#44FFFFFF"
                                        Style="{DynamicResource MaterialDesignOutlinedDatePicker}"/>

                            <ComboBox Grid.Row="1" Grid.Column="0" 
                                      Margin="0,0,0,16"
                                      ItemsSource="{Binding PlacowkiComboBoxItems}" 
                                      DisplayMemberPath="Value"
                                      SelectedValuePath="Key"
                                      SelectedValue="{Binding IdPlacowki, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                      materialDesign:HintAssist.Hint="Wybierz placówkę"
                                      BorderBrush="#44FFFFFF"
                                      Style="{DynamicResource MaterialDesignOutlinedComboBox}"/>

                            <ComboBox Grid.Row="1" Grid.Column="2"
                                      Margin="0,0,0,16"
                                      ItemsSource="{Binding SortCostItems}"
                                      DisplayMemberPath="Value"
                                      SelectedValuePath="Key"
                                      SelectedValue="{Binding SortCost, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource IntToEnumConverter}}"
                                      materialDesign:HintAssist.Hint="Sortowanie"
                                      BorderBrush="#44FFFFFF"
                                      Style="{DynamicResource MaterialDesignOutlinedComboBox}"/>
                        </Grid>

                        <Separator Background="#44FFFFFF"
                                   Margin="0,8,0,24"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <Button Grid.Column="1"
                                    Command="{Binding GenerujRaportCommand}"
                                    Style="{StaticResource MaterialDesignRaisedButton}"
                                    Background="{DynamicResource AccentPurple}"
                                    Height="40"
                                    Padding="24,0"
                                    Margin="0,0,12,0">
                                <StackPanel Orientation="Horizontal">
                                    <materialIcons:MaterialIcon Kind="PlayCircle" 
                                                               Width="20" Height="20" 
                                                               Margin="0,0,8,0"
                                                               Foreground="White"/>
                                    <TextBlock Text="Generuj Raport" 
                                               VerticalAlignment="Center"
                                               Foreground="White"/>
                                </StackPanel>
                            </Button>

                            <Button Grid.Column="2"
                                    Command="{Binding ResetujCommand}"
                                    Style="{StaticResource MaterialDesignOutlinedButton}"
                                    BorderBrush="#44FFFFFF"
                                    Foreground="White"
                                    Height="40"
                                    Padding="24,0">
                                <StackPanel Orientation="Horizontal">
                                    <materialIcons:MaterialIcon Kind="Refresh" 
                                                               Width="20" Height="20" 
                                                               Margin="0,0,8,0"
                                                               Foreground="White"/>
                                    <TextBlock Text="Resetuj" 
                                               VerticalAlignment="Center"
                                               Foreground="White"/>
                                </StackPanel>
                            </Button>
                        </Grid>
                    </StackPanel>
                </materialDesign:Card>

                <materialDesign:Card Style="{StaticResource CardStyle}" 
                                     Margin="0,0,0,16"
                                     Visibility="{Binding PokazWykres, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                            <Border Background="{DynamicResource AccentPurple}" 
                                    Width="4" 
                                    Height="16" 
                                    CornerRadius="2" 
                                    Margin="0,0,12,0"
                                    VerticalAlignment="Center"/>
                            <TextBlock Text="Wykres Kosztów" 
                                       FontSize="15" 
                                       FontWeight="Light"
                                       Foreground="White"
                                       VerticalAlignment="Center"/>
                        </StackPanel>

                        <lvc:CartesianChart Height="350" 
                                           Series="{Binding ChartSeries}"
                                           LegendLocation="Right"
                                           Margin="0,0,0,16"
                                           Background="Transparent"
                                           Foreground="White">
                            <lvc:CartesianChart.AxisX>
                                <lvc:Axis Title="Placówki" 
                                         Labels="{Binding ChartLabels}"
                                         LabelsRotation="45"
                                         FontSize="11"
                                         Foreground="White">
                                    <lvc:Axis.Separator>
                                        <lvc:Separator Step="1" Stroke="#44FFFFFF"/>
                                    </lvc:Axis.Separator>
                                </lvc:Axis>
                            </lvc:CartesianChart.AxisX>
                            <lvc:CartesianChart.AxisY>
                                <lvc:Axis Title="Koszty (PLN)" 
                                         LabelFormatter="{Binding ChartFormatter}"
                                         FontSize="11"
                                         Foreground="White">
                                    <lvc:Axis.Separator>
                                        <lvc:Separator Stroke="#44FFFFFF"/>
                                    </lvc:Axis.Separator>
                                </lvc:Axis>
                            </lvc:CartesianChart.AxisY>
                        </lvc:CartesianChart>

                        <TextBlock HorizontalAlignment="Center" 
                                  FontSize="11"
                                  Foreground="#88FFFFFF">
                            <Run Text="Wykres przedstawia TOP 10 placówek według łącznych kosztów"/>
                        </TextBlock>
                    </StackPanel>
                </materialDesign:Card>

                <materialDesign:Card Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <Grid Margin="0,0,0,16">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Orientation="Horizontal">
                                <Border Background="{DynamicResource AccentPurple}" 
                                        Width="4" 
                                        Height="16" 
                                        CornerRadius="2" 
                                        Margin="0,0,12,0"
                                        VerticalAlignment="Center"/>
                                <TextBlock Text="Wyniki Raportu" 
                                           FontSize="15" 
                                           FontWeight="Light"
                                           Foreground="White"
                                           VerticalAlignment="Center"/>
                            </StackPanel>

                            <Button Grid.Column="1"
                                    Style="{StaticResource MaterialDesignFlatButton}"
                                    Command="{Binding EksportujCommand}"
                                    ToolTip="Eksportuj do Excel"
                                    Foreground="White"
                                    Visibility="{Binding PokazWykres, Converter={StaticResource BooleanToVisibilityConverter}}">
                                <StackPanel Orientation="Horizontal">
                                    <materialIcons:MaterialIcon Kind="FileExcel" 
                                                               Width="16" Height="16" 
                                                               Margin="0,0,8,0"
                                                               Foreground="{DynamicResource AccentPurple}"/>
                                    <TextBlock Text="Eksportuj" FontSize="13"/>
                                </StackPanel>
                            </Button>
                        </Grid>

                        <DataGrid ItemsSource="{Binding KosztyPlacowek}"
                                  AutoGenerateColumns="False"
                                  CanUserAddRows="False"
                                  CanUserDeleteRows="False"
                                  IsReadOnly="True"
                                  SelectionMode="Single"
                                  HeadersVisibility="All"
                                  GridLinesVisibility="Horizontal"
                                  Background="Transparent"
                                  RowBackground="#2D3136"
                                  AlternatingRowBackground="#252830"
                                  BorderBrush="#44FFFFFF"
                                  Foreground="White"
                                  materialDesign:DataGridAssist.CellPadding="12,8"
                                  materialDesign:DataGridAssist.ColumnHeaderPadding="12,10"
                                  Visibility="{Binding PokazWykres, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <DataGrid.ColumnHeaderStyle>
                                <Style TargetType="DataGridColumnHeader" BasedOn="{StaticResource {x:Type DataGridColumnHeader}}">
                                    <Setter Property="Background" Value="{DynamicResource AccentPurple}"/>
                                    <Setter Property="Foreground" Value="White"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                </Style>
                            </DataGrid.ColumnHeaderStyle>
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="#" 
                                                    Binding="{Binding Pozycja}" 
                                                    Width="50">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="FontWeight" Value="Bold"/>
                                            <Setter Property="Foreground" Value="{DynamicResource AccentPurpleLight}"/>
                                            <Setter Property="HorizontalAlignment" Value="Center"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="Placówka" 
                                                    Binding="{Binding NazwaPlacowki}" 
                                                    Width="*" 
                                                    MinWidth="200">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="FontWeight" Value="Medium"/>
                                            <Setter Property="Foreground" Value="White"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="Liczba Karetek" 
                                                    Binding="{Binding LiczbaKaretek}" 
                                                    Width="120">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="HorizontalAlignment" Value="Center"/>
                                            <Setter Property="Foreground" Value="White"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="Liczba Kosztów" 
                                                    Binding="{Binding LiczbaKosztow}" 
                                                    Width="120">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="HorizontalAlignment" Value="Center"/>
                                            <Setter Property="Foreground" Value="White"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>

                                <DataGridTextColumn Header="Łączne Koszty" 
                                                    Binding="{Binding LaczneKoszty, StringFormat='{}{0:C2}'}" 
                                                    Width="150">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="FontWeight" Value="Bold"/>
                                            <Setter Property="HorizontalAlignment" Value="Right"/>
                                            <Setter Property="Foreground" Value="#4CAF50"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>

                                <DataGridTextColumn Header="Średni Koszt/Karetka" 
                                                    Binding="{Binding SredniKosztNaKaretke, StringFormat='{}{0:C2}'}" 
                                                    Width="160">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="HorizontalAlignment" Value="Right"/>
                                            <Setter Property="Foreground" Value="White"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>

                                <DataGridTemplateColumn Header="Kategoria" Width="120">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Border CornerRadius="12" 
                                                    Padding="8,4"
                                                    HorizontalAlignment="Center">
                                                <Border.Style>
                                                    <Style TargetType="Border">
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding KolorKategorii}" Value="Green">
                                                                <Setter Property="Background" Value="#1B5E20"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding KolorKategorii}" Value="Orange">
                                                                <Setter Property="Background" Value="#E65100"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding KolorKategorii}" Value="Red">
                                                                <Setter Property="Background" Value="#B71C1C"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Border.Style>
                                                <TextBlock Text="{Binding KategoriaKosztow}" 
                                                          FontSize="11" 
                                                          FontWeight="SemiBold"
                                                          Foreground="White"/>
                                            </Border>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>

                        <StackPanel Visibility="{Binding BrakDanych, Converter={StaticResource BooleanToVisibilityConverter}}"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Margin="0,40">
                            <Border Background="{DynamicResource AccentPurple}"
                                    Width="80"
                                    Height="80"
                                    CornerRadius="40"
                                    HorizontalAlignment="Center"
                                    Opacity="0.3">
                                <materialIcons:MaterialIcon Kind="ChartBoxOutline" 
                                                           Width="48" Height="48"
                                                           Foreground="White"
                                                           HorizontalAlignment="Center"
                                                           VerticalAlignment="Center"/>
                            </Border>
                            <TextBlock Text="Brak danych do wyświetlenia" 
                                      FontSize="16"
                                      FontWeight="Light"
                                      Foreground="White"
                                      HorizontalAlignment="Center"
                                      Margin="0,16,0,8"/>
                            <TextBlock Text="Wygeneruj raport, aby zobaczyć wyniki" 
                                      FontSize="13"
                                      Foreground="#88FFFFFF"
                                      HorizontalAlignment="Center"/>
                        </StackPanel>
                    </StackPanel>
                </materialDesign:Card>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
