<UserControl x:Class="Medical.Views.KosztyKaretekView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:materialIcons="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
             xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
             xmlns:viewmodels="clr-namespace:Medical.ViewModels" d:DataContext="{d:DesignInstance Type=viewmodels:KosztyKaretekViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="900">
    <UserControl.Resources>
        <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Foreground" Value="{DynamicResource PrimaryHueMidBrush}"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
        </Style>
        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Foreground" Value="{DynamicResource MaterialDesignBody}"/>
        </Style>
        <Style x:Key="ResultCardStyle" TargetType="materialDesign:Card">
            <Setter Property="Padding" Value="16"/>
            <Setter Property="Margin" Value="0,8,0,0"/>
            <Setter Property="UniformCornerRadius" Value="8"/>
        </Style>
    </UserControl.Resources>

    <Grid Background="{DynamicResource MaterialDesignPaper}">
        <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="24">
            <StackPanel Margin="24">
                <materialDesign:Card UniformCornerRadius="8" Padding="20" Margin="0,0,0,20">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center">
                            <Border BorderThickness="2" BorderBrush="#9D8FEF"/>
                            <TextBlock Text="Koszty Utrzymania Karetek wg Placówek" 
                                       FontSize="28" 
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource MaterialDesignBody}"
                                       Padding="0,4,0,4"/>
                        </StackPanel>
                    </Grid>
                </materialDesign:Card>
                <materialDesign:Card UniformCornerRadius="8" Padding="20" Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Margin="0,0,0,20" 
                                   FontSize="16" 
                                   FontWeight="SemiBold" 
                                   Text="Filtry i Kryteria" 
                                   Foreground="{DynamicResource AccentPurple}"/>

                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="16"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <DatePicker Grid.Row="0" Grid.Column="0" 
                                        Margin="0,0,0,16"
                                        SelectedDate="{Binding DataOd, UpdateSourceTrigger=PropertyChanged}"
                                        materialDesign:HintAssist.Hint="Data od"
                                        Style="{DynamicResource MaterialDesignOutlinedDatePicker}"/>

                            <DatePicker Grid.Row="0" Grid.Column="2" 
                                        Margin="0,0,0,16"
                                        SelectedDate="{Binding DataDo, UpdateSourceTrigger=PropertyChanged}"
                                        materialDesign:HintAssist.Hint="Data do"
                                        Style="{DynamicResource MaterialDesignOutlinedDatePicker}"/>

                            <ComboBox Grid.Row="1" Grid.Column="0" 
                                      Margin="0,0,0,16"
                                      ItemsSource="{Binding PlacowkiComboBoxItems}" 
                                      DisplayMemberPath="Value"
                                      SelectedValuePath="Key"
                                      SelectedValue="{Binding IdPlacowki, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                      materialDesign:HintAssist.Hint="Wybierz placówkę"
                                      Style="{DynamicResource MaterialDesignOutlinedComboBox}"/>

                            <ComboBox Grid.Row="1" Grid.Column="2"
                                      Margin="0,0,0,16"
                                      ItemsSource="{Binding SortOrderItems}"
                                      DisplayMemberPath="Value"
                                      SelectedValuePath="Key"
                                      SelectedValue="{Binding SortOrder, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource IntToEnumConverter}}"
                                      materialDesign:HintAssist.Hint="Sortowanie"
                                      Style="{DynamicResource MaterialDesignOutlinedComboBox}"/>
                        </Grid>

                        <Separator Background="{DynamicResource MaterialDesignDivider}"
                                   Margin="0,8,0,24"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <Button Grid.Column="1"
                                    Command="{Binding GenerujRaportCommand}"
                                    Style="{StaticResource MaterialDesignRaisedButton}"
                                    Height="40"
                                    Padding="24,0"
                                    Margin="0,0,12,0">
                                <StackPanel Orientation="Horizontal">
                                    <materialIcons:MaterialIcon Kind="PlayCircle" 
                                                               Width="20" Height="20" 
                                                               Margin="0,0,8,0"/>
                                    <TextBlock Text="Generuj Raport" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>

                            <Button Grid.Column="2"
                                    Command="{Binding ResetujCommand}"
                                    Style="{StaticResource MaterialDesignOutlinedButton}"
                                    Height="40"
                                    Padding="24,0">
                                <StackPanel Orientation="Horizontal">
                                    <materialIcons:MaterialIcon Kind="Refresh" 
                                                               Width="20" Height="20" 
                                                               Margin="0,0,8,0"/>
                                    <TextBlock Text="Resetuj" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                        </Grid>
                    </StackPanel>
                </materialDesign:Card>

                <materialDesign:Card UniformCornerRadius="8" 
                                     Padding="20" 
                                     Margin="0,0,0,20"
                                     Visibility="{Binding PokazWykres, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <StackPanel>
                        <TextBlock Text="Wykres Kosztów" 
                                   Style="{StaticResource SectionHeaderStyle}"
                                   Margin="0,0,0,16"/>

                        <lvc:CartesianChart Height="350" 
                                           Series="{Binding ChartSeries}"
                                           LegendLocation="Right"
                                           Margin="0,0,0,16">
                            <lvc:CartesianChart.AxisX>
                                <lvc:Axis Title="Placówki" 
                                         Labels="{Binding ChartLabels}"
                                         LabelsRotation="45"
                                         FontSize="11"
                                         Foreground="{DynamicResource MaterialDesignBody}">
                                    <lvc:Axis.Separator>
                                        <lvc:Separator Step="1"/>
                                    </lvc:Axis.Separator>
                                </lvc:Axis>
                            </lvc:CartesianChart.AxisX>
                            <lvc:CartesianChart.AxisY>
                                <lvc:Axis Title="Koszty (PLN)" 
                                         LabelFormatter="{Binding ChartFormatter}"
                                         FontSize="11"
                                         Foreground="{DynamicResource MaterialDesignBody}"/>
                            </lvc:CartesianChart.AxisY>
                        </lvc:CartesianChart>

                        <TextBlock HorizontalAlignment="Center" 
                                  FontSize="11"
                                  Foreground="{DynamicResource MaterialDesignBodyLight}">
                            <Run Text="Wykres przedstawia TOP 10 placówek według łącznych kosztów"/>
                        </TextBlock>
                    </StackPanel>
                </materialDesign:Card>
                <materialDesign:Card UniformCornerRadius="8" Padding="20">
                    <StackPanel>
                        <Grid Margin="0,0,0,16">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="Wyniki Raportu" 
                                       Style="{StaticResource SectionHeaderStyle}"
                                       Margin="0"/>

                            <Button Grid.Column="1"
                                    Style="{StaticResource MaterialDesignFlatButton}"
                                    Command="{Binding EksportujCommand}"
                                    ToolTip="Eksportuj do Excel"
                                    Visibility="{Binding PokazWykres, Converter={StaticResource BooleanToVisibilityConverter}}">
                                <StackPanel Orientation="Horizontal">
                                    <materialIcons:MaterialIcon Kind="FileExcel" 
                                                               Width="16" Height="16" 
                                                               Margin="0,0,8,0"/>
                                    <TextBlock Text="Eksportuj" FontSize="13"/>
                                </StackPanel>
                            </Button>
                        </Grid>
                        <DataGrid ItemsSource="{Binding KosztyPlacowek}"
                                  AutoGenerateColumns="False"
                                  CanUserAddRows="False"
                                  CanUserDeleteRows="False"
                                  IsReadOnly="True"
                                  SelectionMode="Single"
                                  HeadersVisibility="All"
                                  GridLinesVisibility="Horizontal"
                                  materialDesign:DataGridAssist.CellPadding="12,8"
                                  materialDesign:DataGridAssist.ColumnHeaderPadding="12,10"
                                  Visibility="{Binding PokazWykres, Converter={StaticResource BooleanToVisibilityConverter}}">

                            <DataGrid.Columns>
                                <DataGridTextColumn Header="#" 
                                                    Binding="{Binding Pozycja}" 
                                                    Width="50">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="FontWeight" Value="Bold"/>
                                            <Setter Property="Foreground" Value="{DynamicResource PrimaryHueMidBrush}"/>
                                            <Setter Property="HorizontalAlignment" Value="Center"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="Placówka" 
                                                    Binding="{Binding NazwaPlacowki}" 
                                                    Width="*" 
                                                    MinWidth="200">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="FontWeight" Value="Medium"/>
                                            <Setter Property="Foreground" Value="{DynamicResource MaterialDesignBody}"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="Liczba Karetek" 
                                                    Binding="{Binding LiczbaKaretek}" 
                                                    Width="120">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="HorizontalAlignment" Value="Center"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="Liczba Kosztów" 
                                                    Binding="{Binding LiczbaKosztow}" 
                                                    Width="120">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="HorizontalAlignment" Value="Center"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>

                                <DataGridTextColumn Header="Łączne Koszty" 
                                                    Binding="{Binding LaczneKoszty, StringFormat='{}{0:C2}'}" 
                                                    Width="150">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="FontWeight" Value="Bold"/>
                                            <Setter Property="HorizontalAlignment" Value="Right"/>
                                            <Setter Property="Foreground" Value="#2E7D32"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>

                                <DataGridTextColumn Header="Średni Koszt/Karetka" 
                                                    Binding="{Binding SredniKosztNaKaretke, StringFormat='{}{0:C2}'}" 
                                                    Width="160">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="HorizontalAlignment" Value="Right"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>

                                <DataGridTemplateColumn Header="Kategoria" Width="120">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Border CornerRadius="12" 
                                                    Padding="8,4"
                                                    HorizontalAlignment="Center">
                                                <Border.Style>
                                                    <Style TargetType="Border">
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding KolorKategorii}" Value="Green">
                                                                <Setter Property="Background" Value="#E8F5E9"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding KolorKategorii}" Value="Orange">
                                                                <Setter Property="Background" Value="#FFF3E0"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding KolorKategorii}" Value="Red">
                                                                <Setter Property="Background" Value="#FFEBEE"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Border.Style>
                                                <TextBlock Text="{Binding KategoriaKosztow}" 
                                                          FontSize="11" 
                                                          FontWeight="SemiBold">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding KolorKategorii}" Value="Green">
                                                                    <Setter Property="Foreground" Value="#2E7D32"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding KolorKategorii}" Value="Orange">
                                                                    <Setter Property="Foreground" Value="#EF6C00"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding KolorKategorii}" Value="Red">
                                                                    <Setter Property="Foreground" Value="#C62828"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                            </Border>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                        <StackPanel Visibility="{Binding BrakDanych, Converter={StaticResource BooleanToVisibilityConverter}}"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Margin="0,40">
                            <materialIcons:MaterialIcon Kind="ChartBoxOutline" 
                                                       Width="64" Height="64"
                                                       Foreground="{DynamicResource MaterialDesignBodyLight}"
                                                       HorizontalAlignment="Center"/>
                            <TextBlock Text="Brak danych do wyświetlenia" 
                                      FontSize="16"
                                      Foreground="{DynamicResource MaterialDesignBodyLight}"
                                      HorizontalAlignment="Center"
                                      Margin="0,16,0,8"/>
                            <TextBlock Text="Wygeneruj raport, aby zobaczyć wyniki" 
                                      FontSize="13"
                                      Foreground="{DynamicResource MaterialDesignBodyLight}"
                                      HorizontalAlignment="Center"/>
                        </StackPanel>
                    </StackPanel>
                </materialDesign:Card>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
