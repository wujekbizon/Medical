<local:JedenViewBase x:Class="Medical.Views.NowaHistoraNaprawView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Medical.Views"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:materialIcons="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
             xmlns:viewmodels="clr-namespace:Medical.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="900" d:DesignWidth="900">

    <local:JedenViewBase.Resources>
        <Style x:Key="CardStyle" TargetType="materialDesign:Card">
            <Setter Property="Padding" Value="24"/>
            <Setter Property="UniformCornerRadius" Value="12"/>
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#2D3136" Offset="0"/>
                        <GradientStop Color="#1E2124" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderBrush" Value="#44FFFFFF"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
    </local:JedenViewBase.Resources>

    <Grid Background="{DynamicResource IndustrialGunmetal}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <materialDesign:Card Grid.Row="0"
                            UniformCornerRadius="12"
                            Padding="24"
                            Style="{StaticResource CardStyle}"
                            Margin="16">
            <StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,24">
                    <Border Background="#9D8FEF" Width="4" Height="16" CornerRadius="2" Margin="0,0,12,0"/>
                    <TextBlock Text="Podstawowe Informacje" 
                               FontSize="15" 
                               FontWeight="Light"
                               Foreground="White"
                               VerticalAlignment="Center"/>
                </StackPanel>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="16"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBox Grid.Row="0" Grid.Column="0"
                             Text="{Binding RodzajNaprawy, UpdateSourceTrigger=PropertyChanged}"
                             materialDesign:HintAssist.Hint="Rodzaj Naprawy"
                             BorderBrush="#44FFFFFF"
                             Style="{DynamicResource MaterialDesignOutlinedTextBox}"
                             Margin="0,0,0,16"/>

                    <DatePicker Grid.Row="0" Grid.Column="2"
                                SelectedDate="{Binding DataRozpoczecia, UpdateSourceTrigger=PropertyChanged}"
                                materialDesign:HintAssist.Hint="Data Rozpoczęcia"
                                BorderBrush="#44FFFFFF"
                                Style="{DynamicResource MaterialDesignOutlinedDatePicker}"
                                Margin="0,0,0,16"/>

                    <DatePicker Grid.Row="1" Grid.Column="0"
                                SelectedDate="{Binding DataZakonczenia, UpdateSourceTrigger=PropertyChanged}"
                                materialDesign:HintAssist.Hint="Data Zakończenia"
                                BorderBrush="#44FFFFFF"
                                Style="{DynamicResource MaterialDesignOutlinedDatePicker}"
                                Margin="0,0,0,16"/>

                    <TextBox Grid.Row="1" Grid.Column="2"
                             Text="{Binding CzasTrwaniaNaprawy, UpdateSourceTrigger=PropertyChanged, StringFormat=N2}"
                             materialDesign:HintAssist.Hint="Czas Trwania Naprawy (w godzinach)"
                             BorderBrush="#44FFFFFF"
                             Style="{DynamicResource MaterialDesignOutlinedTextBox}"
                             Margin="0,0,0,16"/>

                    <TextBox Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3"
                             Text="{Binding OpisNaprawy, UpdateSourceTrigger=PropertyChanged}"
                             materialDesign:HintAssist.Hint="Opis Naprawy"
                             BorderBrush="#44FFFFFF"
                             Style="{DynamicResource MaterialDesignOutlinedTextBox}"
                             AcceptsReturn="True"
                             TextWrapping="Wrap"
                             MinHeight="80"
                             VerticalScrollBarVisibility="Auto"
                             Margin="0,0,0,0"/>
                </Grid>
            </StackPanel>
        </materialDesign:Card>
        <materialDesign:Card Grid.Row="1"
                             UniformCornerRadius="12"
                             Padding="24"
                             Style="{StaticResource CardStyle}"
                             Margin="16">
            <StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,24">
                    <Border Background="#9D8FEF" Width="4" Height="16" CornerRadius="2" Margin="0,0,12,0"/>
                    <TextBlock Text="Dane Karetki" 
                               FontSize="15" 
                               FontWeight="Light"
                               Foreground="White"
                               VerticalAlignment="Center"/>
                </StackPanel>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="16"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Grid Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" Margin="0,0,0,16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="8"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBox Grid.Column="0"
                                 Text="{Binding KaretkaNumerRejestracyjny, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                 materialDesign:HintAssist.Hint="Numer Rejestracyjny Karetki"
                                 BorderBrush="#44FFFFFF"
                                 IsEnabled="False"
                                 Style="{DynamicResource MaterialDesignOutlinedTextBox}"/>

                        <Button Grid.Column="2"
                                Command="{Binding ShowKaretki}"
                                Style="{DynamicResource MaterialDesignRaisedButton}"
                                Background="#1E2124"
                                Height="50"
                                Padding="16,0"
                                ToolTip="Wybierz karetkę">
                            <materialIcons:MaterialIcon Kind="Ambulance" Width="24" Height="24" Foreground="White"/>
                        </Button>
                    </Grid>

                    <TextBox Grid.Row="1" Grid.Column="0"
                             Text="{Binding KaretkaTyp, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                             materialDesign:HintAssist.Hint="Typ Karetki"
                             BorderBrush="#44FFFFFF"
                             IsEnabled="False"
                             Style="{DynamicResource MaterialDesignOutlinedTextBox}"
                             Margin="0,0,0,16"/>

                    <TextBox Grid.Row="1" Grid.Column="2"
                             Text="{Binding KaretkaStatus, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                             materialDesign:HintAssist.Hint="Status Karetki"
                             BorderBrush="#44FFFFFF"
                             IsEnabled="False"
                             Style="{DynamicResource MaterialDesignOutlinedTextBox}"
                             Margin="0,0,0,16"/>

                    <TextBox Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3"
                             Text="{Binding StanKaretkiPrzedNaprawa, UpdateSourceTrigger=PropertyChanged}"
                             materialDesign:HintAssist.Hint="Stan Karetki Przed Naprawą"
                             BorderBrush="#44FFFFFF"
                             Style="{DynamicResource MaterialDesignOutlinedTextBox}"
                             AcceptsReturn="True"
                             TextWrapping="Wrap"
                             MinHeight="60"
                             VerticalScrollBarVisibility="Auto"
                             Margin="0,0,0,16"/>

                    <TextBox Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="3"
                             Text="{Binding StanKaretkiPoNaprawie, UpdateSourceTrigger=PropertyChanged}"
                             materialDesign:HintAssist.Hint="Stan Karetki Po Naprawie"
                             BorderBrush="#44FFFFFF"
                             Style="{DynamicResource MaterialDesignOutlinedTextBox}"
                             AcceptsReturn="True"
                             TextWrapping="Wrap"
                             MinHeight="60"
                             VerticalScrollBarVisibility="Auto"
                             Margin="0,0,0,0"/>
                </Grid>
            </StackPanel>
        </materialDesign:Card>
        <materialDesign:Card Grid.Row="2"
                             UniformCornerRadius="12"
                             Padding="24"
                             Style="{StaticResource CardStyle}"
                             Margin="16">
            <StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,24">
                    <Border Background="#9D8FEF" Width="4" Height="16" CornerRadius="2" Margin="0,0,12,0"/>
                    <TextBlock Text="Szczegóły Finansowe" 
                               FontSize="15" 
                               FontWeight="Light"
                               Foreground="White"
                               VerticalAlignment="Center"/>
                </StackPanel>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="16"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBox Grid.Row="0" Grid.Column="0"
                             Text="{Binding KosztNaprawy, UpdateSourceTrigger=PropertyChanged, StringFormat=N2}"
                             materialDesign:HintAssist.Hint="Koszt Naprawy (PLN)"
                             BorderBrush="#44FFFFFF"
                             Style="{DynamicResource MaterialDesignOutlinedTextBox}"
                             Margin="0,0,0,16"/>

                    <TextBox Grid.Row="0" Grid.Column="2"
                             Text="{Binding GwarancjaMiesiecy, UpdateSourceTrigger=PropertyChanged}"
                             materialDesign:HintAssist.Hint="Gwarancja (miesiące)"
                             BorderBrush="#44FFFFFF"
                             Style="{DynamicResource MaterialDesignOutlinedTextBox}"
                             Margin="0,0,0,16"/>

                    <CheckBox Grid.Row="1" Grid.Column="0"
                              IsChecked="{Binding CzyZatwierdzona, UpdateSourceTrigger=PropertyChanged}"
                              Content="Naprawa Zatwierdzona"
                              Foreground="White"
                              FontSize="14"/>
                </Grid>
            </StackPanel>
        </materialDesign:Card>
        <materialDesign:Card Grid.Row="3"
                             UniformCornerRadius="12"
                             Padding="24"
                             Style="{StaticResource CardStyle}"
                             Margin="16">
            <StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,24">
                    <Border Background="#9D8FEF" Width="4" Height="16" CornerRadius="2" Margin="0,0,12,0"/>
                    <TextBlock Text="Faktura i Kontrahent" 
                               FontSize="15" 
                               FontWeight="Light"
                               Foreground="White"
                               VerticalAlignment="Center"/>
                </StackPanel>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0" Margin="0,0,0,16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="8"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBox Grid.Column="0"
                                 Text="{Binding FakturaNumer, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                 materialDesign:HintAssist.Hint="Numer Faktury"
                                 BorderBrush="#44FFFFFF"
                                 IsEnabled="False"
                                 Style="{DynamicResource MaterialDesignOutlinedTextBox}"/>

                        <Button Grid.Column="2"
                                Command="{Binding ShowFaktury}"
                                Style="{DynamicResource MaterialDesignRaisedButton}"
                                Background="#1E2124"
                                Height="50"
                                Padding="16,0"
                                ToolTip="Wybierz fakturę">
                            <materialIcons:MaterialIcon Kind="Receipt" Width="24" Height="24" Foreground="White"/>
                        </Button>
                    </Grid>

                    <TextBox Grid.Row="1"
                             Text="{Binding FakturaKategoriaKosztu, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                             materialDesign:HintAssist.Hint="Kategoria Kosztu"
                             BorderBrush="#44FFFFFF"
                             IsEnabled="False"
                             Style="{DynamicResource MaterialDesignOutlinedTextBox}"
                             Margin="0,0,0,16"/>

                    <Grid Grid.Row="2" Margin="0,0,0,16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="8"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBox Grid.Column="0"
                                 Text="{Binding KontrahentNazwa, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                 materialDesign:HintAssist.Hint="Nazwa Kontrahenta"
                                 BorderBrush="#44FFFFFF"
                                 IsEnabled="False"
                                 Style="{DynamicResource MaterialDesignOutlinedTextBox}"/>

                        <Button Grid.Column="2"
                                Command="{Binding ShowKontrahenci}"
                                Style="{DynamicResource MaterialDesignRaisedButton}"
                                Background="#1E2124"
                                Height="50"
                                Padding="16,0"
                                ToolTip="Wybierz kontrahenta">
                            <materialIcons:MaterialIcon Kind="AccountSearch" Width="24" Height="24" Foreground="White"/>
                        </Button>
                    </Grid>

                    <TextBox Grid.Row="3"
                             Text="{Binding KontrahentNIP, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                             materialDesign:HintAssist.Hint="NIP Kontrahenta"
                             BorderBrush="#44FFFFFF"
                             IsEnabled="False"
                             Style="{DynamicResource MaterialDesignOutlinedTextBox}"/>
                </Grid>
            </StackPanel>
        </materialDesign:Card>
    </Grid>
</local:JedenViewBase>
