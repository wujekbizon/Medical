<local:WszystkieViewBase x:Class="Medical.Views.WszystkieZespolyRatunkoweView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Medical.Views" xmlns:viewmodels="clr-namespace:Medical.ViewModels" d:DataContext="{d:DesignInstance Type=viewmodels:WszystkieZespolyRatunkoweViewModel}"
                         mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="#252526">
        <Grid.RowDefinitions>
            <RowDefinition Height="0*"/>
            <RowDefinition />
        </Grid.RowDefinitions>
        <DataGrid AutoGenerateColumns="False" Margin="0,-2,0,0" Grid.RowSpan="2" ItemsSource="{Binding List}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Nazwa Zespołu" Binding="{Binding NazwaZespolu}" />
                <DataGridTextColumn Header="Liczba Członków" Binding="{Binding LiczbaCzlonkow}" />
                <DataGridTextColumn Header="Karetka" Binding="{Binding Karetka}" />
                <DataGridTextColumn Header="Placówka" Binding="{Binding NazwaPlacowki}" />
                <DataGridTextColumn Header="Specjalizacja" Binding="{Binding Specjalizacja}" />
                <DataGridTextColumn Header="Data Utworzenia" Binding="{Binding DataUtworzenia, StringFormat={}{0:dd.MM.yyyy}}" />
                <DataGridTextColumn Header="Status Zespołu" Binding="{Binding StatusZespolu}" />
                <DataGridTextColumn Header="Telefon Kontaktowy" Binding="{Binding TelefonKontaktowy}" />
                <DataGridTextColumn Header="Zmiana" Binding="{Binding Zmiana}" />
                <DataGridTextColumn Header="Data Ostatniego Szkolenia" Binding="{Binding DataOstatniegoSzkolenia, StringFormat={}{0:dd.MM.yyyy}}" />
                <DataGridTextColumn Header="Średnia Ocena" Binding="{Binding SredniaOcena, StringFormat={}{0:N2}}" />
                <DataGridTextColumn Header="Data Ostatniego Wyjazdu" Binding="{Binding DataOstatniegoWyjazdu, StringFormat={}{0:dd.MM.yyyy HH:mm}}" />
                <DataGridTextColumn Header="Liczba Wszystkich Wyjazdów" Binding="{Binding LiczbaWszystkichWyjazdow}" />
                <DataGridTextColumn Header="Certyfikaty" Binding="{Binding Certyfikaty}" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</local:WszystkieViewBase>