<Window x:Class="Medical.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Medical.Views"
        xmlns:controls="clr-namespace:Medical.Views.Controls"
        xmlns:helper="clr-namespace:Medical.Helper"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:materialIcons="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF" xmlns:viewmodels="clr-namespace:Medical.ViewModels"
        Title="Medical - System Zarządzania Medycznego"  Height="768" Width="1366"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{DynamicResource MaterialDesignFont}"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto">

    <Window.InputBindings>
        <KeyBinding Key="P" Modifiers="Control" Command="{x:Static helper:MenuCommands.OpenFileMenu}"/>
        <KeyBinding Key="A" Modifiers="Control" Command="{x:Static helper:MenuCommands.OpenPatientsMenu}"/>
        <KeyBinding Key="Z" Modifiers="Control" Command="{x:Static helper:MenuCommands.OpenTeamsMenu}"/>
        <KeyBinding Key="H" Modifiers="Control" Command="{x:Static helper:MenuCommands.OpenHelpMenu}"/>
        <KeyBinding Key="N" Modifiers="Control" Command="{x:Static helper:MenuCommands.NewRecord}"/>
        <KeyBinding Key="O" Modifiers="Control" Command="{x:Static helper:MenuCommands.OpenFile}"/>
        <KeyBinding Key="Q" Modifiers="Control" Command="{x:Static helper:MenuCommands.Exit}"/>
        <KeyBinding Key="F5" Command="{x:Static helper:MenuCommands.Refresh}"/>
        <KeyBinding Key="F" Modifiers="Control" Command="{x:Static helper:MenuCommands.Search}"/>
        <KeyBinding Key="F1" Command="{x:Static helper:MenuCommands.ShowDocumentation}"/>
        <KeyBinding Key="A" Modifiers="Control+Shift" Command="{x:Static helper:MenuCommands.AllPatients}"/>
        <KeyBinding Key="P" Modifiers="Control+Shift" Command="{x:Static helper:MenuCommands.NewPatient}"/>
        <KeyBinding Key="T" Modifiers="Control+Shift" Command="{x:Static helper:MenuCommands.EmergencyTeams}"/>
        <KeyBinding Key="E" Modifiers="Control+Shift" Command="{x:Static helper:MenuCommands.Employees}"/>
        <KeyBinding Key="D" Modifiers="Control+Shift" Command="{x:Static helper:MenuCommands.NewDispatch}"/>
    </Window.InputBindings>

    <Window.CommandBindings>
        <CommandBinding Command="{x:Static helper:MenuCommands.OpenFileMenu}" Executed="OpenFileMenu_Executed"/>
        <CommandBinding Command="{x:Static helper:MenuCommands.OpenPatientsMenu}" Executed="OpenPatientsMenu_Executed"/>
        <CommandBinding Command="{x:Static helper:MenuCommands.OpenTeamsMenu}" Executed="OpenTeamsMenu_Executed"/>
        <CommandBinding Command="{x:Static helper:MenuCommands.OpenHelpMenu}" Executed="OpenHelpMenu_Executed"/>
        <CommandBinding Command="{x:Static helper:MenuCommands.Exit}" Executed="Exit_Executed"/>
        <CommandBinding Command="{x:Static helper:MenuCommands.Refresh}" Executed="Refresh_Executed"/>
        <CommandBinding Command="{x:Static helper:MenuCommands.Search}" Executed="Search_Executed"/>
        <CommandBinding Command="{x:Static helper:MenuCommands.ShowDocumentation}" Executed="ShowDocumentation_Executed"/>
    </Window.CommandBindings>

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="MainWindowResources.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <Style x:Key="AccentMenuItemStyle" TargetType="MenuItem" BasedOn="{StaticResource {x:Type MenuItem}}">
                <Setter Property="Foreground" Value="{DynamicResource MaterialDesignBody}"/>
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="Padding" Value="10,6"/>
            </Style>

            <Style x:Key="ThemeToggleStyle" TargetType="ToggleButton">
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Foreground" Value="{DynamicResource MaterialDesignBody}"/>
                <Setter Property="Padding" Value="8"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="Width" Value="36"/>
                <Setter Property="Height" Value="36"/>
                <Setter Property="VerticalAlignment" Value="Center"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="ToggleButton">
                            <Border x:Name="border"
                                    Background="{TemplateBinding Background}"
                                    CornerRadius="4"
                                    Padding="{TemplateBinding Padding}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="{DynamicResource MaterialDesignFlatButtonClick}"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </ResourceDictionary>
    </Window.Resources>

    <materialDesign:DialogHost Identifier="RootDialog">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="320"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="36"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Menu x:Name="MainMenu"
                  Grid.Column="0" 
                  Grid.Row="0" 
                  Grid.ColumnSpan="2" 
                  Background="{DynamicResource MaterialDesignToolBarBackground}"
                  Foreground="{DynamicResource MaterialDesignBody}"
                  Height="Auto">

                <MenuItem x:Name="MenuPlik" Style="{StaticResource AccentMenuItemStyle}">
                    <MenuItem.Header>
                        <TextBlock>
                            <Run TextDecorations="Underline" Text="P" Foreground="{DynamicResource AccentPurpleLight}" FontWeight="SemiBold"/><Run Text="lik" Foreground="{DynamicResource MaterialDesignBody}"/>
                        </TextBlock>
                    </MenuItem.Header>
                    <MenuItem Header="Nowy" InputGestureText="Ctrl+N">
                        <MenuItem.Icon>
                            <materialIcons:MaterialIcon Kind="FilePlus" Width="16" Height="16"/>
                        </MenuItem.Icon>
                    </MenuItem>
                    <MenuItem Header="Otwórz" InputGestureText="Ctrl+O">
                        <MenuItem.Icon>
                            <materialIcons:MaterialIcon Kind="FolderOpen" Width="16" Height="16"/>
                        </MenuItem.Icon>
                    </MenuItem>
                    <Separator/>
                    <MenuItem Header="Ustawienia" InputGestureText="Ctrl+,">
                        <MenuItem.Icon>
                            <materialIcons:MaterialIcon Kind="Cog" Width="16" Height="16"/>
                        </MenuItem.Icon>
                    </MenuItem>
                    <Separator/>
                    <MenuItem Header="Wyjście" InputGestureText="Ctrl+Q" Command="{x:Static helper:MenuCommands.Exit}">
                        <MenuItem.Icon>
                            <materialIcons:MaterialIcon Kind="ExitToApp" Width="16" Height="16"/>
                        </MenuItem.Icon>
                    </MenuItem>
                </MenuItem>

                <MenuItem x:Name="MenuPacjenci" Style="{StaticResource AccentMenuItemStyle}">
                    <MenuItem.Header>
                        <TextBlock>
                            <Run Text="P" Foreground="{DynamicResource MaterialDesignBody}"/><Run TextDecorations="Underline" Text="a" Foreground="{DynamicResource AccentPurpleLight}" FontWeight="SemiBold"/><Run Text="cjenci" Foreground="{DynamicResource MaterialDesignBody}"/>
                        </TextBlock>
                    </MenuItem.Header>
                    <MenuItem Header="Wszyscy Pacjenci" InputGestureText="Ctrl+Shift+A">
                        <MenuItem.Icon>
                            <materialIcons:MaterialIcon Kind="AccountMultiple" Width="16" Height="16"/>
                        </MenuItem.Icon>
                    </MenuItem>
                    <MenuItem Header="Nowy Pacjent" InputGestureText="Ctrl+Shift+P">
                        <MenuItem.Icon>
                            <materialIcons:MaterialIcon Kind="AccountPlus" Width="16" Height="16"/>
                        </MenuItem.Icon>
                    </MenuItem>
                </MenuItem>

                <MenuItem x:Name="MenuZespoly" Style="{StaticResource AccentMenuItemStyle}">
                    <MenuItem.Header>
                        <TextBlock>
                            <Run TextDecorations="Underline" Text="Z" Foreground="{DynamicResource AccentPurpleLight}" FontWeight="SemiBold"/><Run Text="espoły" Foreground="{DynamicResource MaterialDesignBody}"/>
                        </TextBlock>
                    </MenuItem.Header>
                    <MenuItem Header="Zespoły Ratunkowe" InputGestureText="Ctrl+Shift+T">
                        <MenuItem.Icon>
                            <materialIcons:MaterialIcon Kind="Ambulance" Width="16" Height="16"/>
                        </MenuItem.Icon>
                    </MenuItem>
                    <MenuItem Header="Pracownicy" InputGestureText="Ctrl+Shift+E">
                        <MenuItem.Icon>
                            <materialIcons:MaterialIcon Kind="PeopleGroup" Width="16" Height="16"/>
                        </MenuItem.Icon>
                    </MenuItem>
                    <Separator/>
                    <MenuItem Header="Nowe Zlecenie Wyjazdu" InputGestureText="Ctrl+Shift+D">
                        <MenuItem.Icon>
                            <materialIcons:MaterialIcon Kind="ClipboardText" Width="16" Height="16"/>
                        </MenuItem.Icon>
                    </MenuItem>
                </MenuItem>

                <MenuItem x:Name="MenuPomoc" Style="{StaticResource AccentMenuItemStyle}">
                    <MenuItem.Header>
                        <TextBlock>
                            <Run TextDecorations="Underline" Text="H" Foreground="{DynamicResource AccentPurpleLight}" FontWeight="SemiBold"/><Run Text="elp" Foreground="{DynamicResource MaterialDesignBody}"/>
                        </TextBlock>
                    </MenuItem.Header>
                    <MenuItem Header="Dokumentacja" InputGestureText="F1">
                        <MenuItem.Icon>
                            <materialIcons:MaterialIcon Kind="BookOpen" Width="16" Height="16"/>
                        </MenuItem.Icon>
                    </MenuItem>
                    <MenuItem Header="O programie" InputGestureText="Shift+F1">
                        <MenuItem.Icon>
                            <materialIcons:MaterialIcon Kind="Information" Width="16" Height="16"/>
                        </MenuItem.Icon>
                    </MenuItem>
                </MenuItem>
            </Menu>

            <Border Grid.Column="0"
                    Grid.Row="2"
                    Background="{DynamicResource IndustrialGunmetal}"
                    BorderBrush="{DynamicResource IndustrialBorder}"
                    BorderThickness="0,0,1,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0"
                           Padding="20,24">
                        
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                <GradientStop Color="#2D3136" Offset="0"/>
                                <GradientStop Color="#1E2124" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        
                        <StackPanel>
                            <Grid HorizontalAlignment="Center">
                                
                                <materialIcons:MaterialIcon Kind="HospitalBox" 
                                         Width="76" Height="76" 
                                         Opacity="1"
                                         Foreground="{StaticResource AccentPurpleLight}">
                                </materialIcons:MaterialIcon>
                                
                                <materialIcons:MaterialIcon Kind="HospitalBox" 
                                         Width="74" Height="74">

                                    <materialIcons:MaterialIcon.Foreground>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1" >
                                            <GradientStop Color="#2D3136" Offset="0.1"/>
                                            <GradientStop Color="#AA2D3136" Offset="0.5"/>
                                            <GradientStop Color="#1E2124" Offset="1"/>
                                            
                                        </LinearGradientBrush>
                                    </materialIcons:MaterialIcon.Foreground>
                                   
                                </materialIcons:MaterialIcon>
                            </Grid>
                            <StackPanel Orientation="Horizontal" 
                                        HorizontalAlignment="Center"
                                        Margin="0,16,0,0">
                                
                                <TextBlock Text="Medical System"
                                           FontSize="24"
                                           FontWeight="Light"
                                           Foreground="White"/>
                            </StackPanel>
                            <TextBlock Text="v1.0"
                                       FontSize="12"
                                       HorizontalAlignment="Center"
                                       Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                        </StackPanel>
                    </Border>

                    <ScrollViewer Grid.Row="1"
                                  VerticalScrollBarVisibility="Auto"
                                  Style="{StaticResource IndustrialScrollViewer}"
                                  Padding="8">
                        <StackPanel>
                            <ContentControl
                                Content="{Binding Path=Commands}"
                                ContentTemplate="{StaticResource CommandsTemplate}"/>
                        </StackPanel>
                    </ScrollViewer>

                    <Border Grid.Row="2"
                            BorderBrush="{DynamicResource IndustrialBorder}"
                            BorderThickness="0,1,0,0"
                            Padding="12">

                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                <GradientStop Color="#1E2124" Offset="0"/>
                                <GradientStop Color="#16181A" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <Border Grid.Column="0"
                                    Background="{DynamicResource AccentPurpleBorderSubtle}"
                                    BorderBrush="#44FFFFFF"
                                    BorderThickness="1.5"
                                    Width="36"
                                    Height="36"
                                    CornerRadius="6"
                                    VerticalAlignment="Center"
                                    Margin="0,0,12,0">
                                <materialIcons:MaterialIcon
                                    Kind="Account"
                                    Width="24" 
                                    Height="24"
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Center"
                                    Foreground="White"/>
                            </Border>
                            <StackPanel Grid.Column="1"
                                        VerticalAlignment="Center">
                                <TextBlock Text="{Binding CurrentUserDisplayName}"
                                           FontSize="14"
                                           FontWeight="Medium"
                                           Foreground="White"/>
                                <TextBlock Text="Zalogowany"
                                           FontSize="10"
                                           Foreground="#88FFFFFF"
                                           Margin="0,2,0,0"/>
                            </StackPanel>
                            <Button Command="{Binding LogoutCommand}"
                                    Grid.Column="2"
                                    Width="36"
                                    Height="36"
                                    Style="{DynamicResource MaterialDesignToolButton}"
                                    ToolTip="Wyloguj się"
                                    Cursor="Hand">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border x:Name="LogoutBorder"
                                                Background="#339D8FEF"
                                                BorderBrush="#44FFFFFF"
                                                BorderThickness="2"
                                                CornerRadius="8"
                                                Width="36"
                                                Height="36">
                                            <materialIcons:MaterialIcon 
                                                    x:Name="LogoutIcon"
                                                    Kind="Logout"  
                                                    Width="20" 
                                                    Height="20" 
                                                    Foreground="White"
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Center">
                                                <materialIcons:MaterialIcon.RenderTransform>
                                                    <RotateTransform Angle="0" CenterX="9" CenterY="9"/>
                                                </materialIcons:MaterialIcon.RenderTransform>
                                            </materialIcons:MaterialIcon>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Trigger.EnterActions>
                                                    <BeginStoryboard>
                                                        <Storyboard>
                                                            <ColorAnimation
                                                                Storyboard.TargetName="LogoutBorder"
                                                                Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                                To="#33FF4444"
                                                                Duration="0:0:0.2"/>
                                                            <ColorAnimation
                                                                Storyboard.TargetName="LogoutBorder"
                                                                Storyboard.TargetProperty="(Border.BorderBrush).(SolidColorBrush.Color)"
                                                                To="#FF4444"
                                                                Duration="0:0:0.2"/>
                                                             <DoubleAnimation
                                                                Storyboard.TargetName="LogoutIcon"
                                                                Storyboard.TargetProperty="(UIElement.RenderTransform).(RotateTransform.Angle)"
                                                                To="15"
                                                                Duration="0:0:0.2">
                                                                <DoubleAnimation.EasingFunction>
                                                                    <CubicEase EasingMode="EaseOut"/>
                                                                </DoubleAnimation.EasingFunction>
                                                            </DoubleAnimation>
                                                        </Storyboard>
                                                    </BeginStoryboard>
                                                </Trigger.EnterActions>
                                                <Trigger.ExitActions>
                                                    <BeginStoryboard>
                                                        <Storyboard>
                                                            <ColorAnimation
                                                    Storyboard.TargetName="LogoutBorder"
                                                    Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                    To="Transparent"
                                                    Duration="0:0:0.2"/>
                                                            <ColorAnimation
                                                    Storyboard.TargetName="LogoutBorder"
                                                    Storyboard.TargetProperty="(Border.BorderBrush).(SolidColorBrush.Color)"
                                                    To="#44FFFFFF"
                                                    Duration="0:0:0.2"/>
                                                            <DoubleAnimation
                                                    Storyboard.TargetName="LogoutIcon"
                                                    Storyboard.TargetProperty="(UIElement.RenderTransform).(RotateTransform.Angle)"
                                                    To="0"
                                                    Duration="0:0:0.2">
                                                                <DoubleAnimation.EasingFunction>
                                                                    <CubicEase EasingMode="EaseOut"/>
                                                                </DoubleAnimation.EasingFunction>
                                                            </DoubleAnimation>
                                                        </Storyboard>
                                                    </BeginStoryboard>
                                                </Trigger.ExitActions>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                        </Grid>
                    </Border>
                </Grid>
            </Border>

            <Grid Grid.Column="1"
                  Grid.Row="2"
                  Background="{DynamicResource MaterialDesignPaper}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Border Grid.Row="0"
                        Margin="8"
                        Background="{DynamicResource MaterialDesignCardBackground}"
                        BorderBrush="{DynamicResource MaterialDesignDivider}"
                        BorderThickness="1"
                        CornerRadius="4">
                    <Grid>
                        <controls:WelcomeMapView x:Name="WelcomeView"
                                                  Visibility="{Binding HasNoWorkspaces, Converter={StaticResource BoolToVisibilityConverter}, FallbackValue=Visible}"/>

                        <ContentControl
                            Content="{Binding Path=Workspaces}"
                            ContentTemplate="{StaticResource WorkspacesTemplate}"
                            Margin="0"/>

                        <controls:LoadingOverlay x:Name="LoadingOverlay"
                                                  Visibility="Collapsed"
                                                  IsLoading="{Binding IsLoading, FallbackValue=False}"/>
                    </Grid>
                </Border>

                <Border Grid.Row="1"
                        Background="{DynamicResource MaterialDesignCardBackground}"
                        BorderBrush="{DynamicResource MaterialDesignDivider}"
                        BorderThickness="0,1,0,0"
                        Padding="16,6">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Orientation="Horizontal">
                            <materialIcons:MaterialIcon
                                Kind="CheckCircle"
                                Width="16" Height="16"
                                Margin="0,0,8,0"
                                VerticalAlignment="Center"
                                Foreground="#4CAF50"/>
                            <TextBlock Text="Gotowy"
                                       FontSize="12"
                                       VerticalAlignment="Center"
                                       Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                        </StackPanel>

                        <TextBlock Grid.Column="2"
                                   Text="{Binding Path=Workspaces.Count, StringFormat='Otwartych zakładek: {0}'}"
                                   FontSize="12"
                                   VerticalAlignment="Center"
                                   Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </materialDesign:DialogHost>
</Window>
