<Window x:Class="Medical.Views.LoginView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:materialIcons="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
        xmlns:local="clr-namespace:Medical.Views" xmlns:viewmodels="clr-namespace:Medical.ViewModels" xmlns:controls="clr-namespace:Medical.Views.Controls" d:DataContext="{d:DesignInstance Type=viewmodels:LoginViewModel}"
        mc:Ignorable="d"
        Title="LoginView" Height="550" Width="800"
        WindowStyle="None"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        MouseDown="Window_MouseDown"
        Background="Transparent"
        AllowsTransparency="True"
        >
    <Window.DataContext>
        <viewmodels:LoginViewModel/>
    </Window.DataContext>

    <Window.Visibility>
        <Binding Path="IsViewVisible" Mode="TwoWay" Converter="{StaticResource BooleanToVisibilityConverter}"/>
    </Window.Visibility>

    <Border CornerRadius="11">
        <Border.Background>
            <ImageBrush ImageSource="/Images/aiGlobe.jpg" 
                        Stretch="UniformToFill"/>
        </Border.Background>
        <Border CornerRadius="10" 
                BorderThickness="1.5" 
                Opacity="1">
            
            <Border.BorderBrush>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#9D8FEF" Offset="0"/>
                    <GradientStop Color="#44FFFFFF" Offset="0.75"/>
                    <GradientStop Color="#2D3136" Offset="1"/>
                </LinearGradientBrush>
            </Border.BorderBrush>
            <Border.Background>
                <LinearGradientBrush StartPoint="0,1" EndPoint="1,0">
                    <GradientStop Color="#CC1E2124" Offset="0"/>
                    <GradientStop Color="#AA2D3136" Offset="0.75"/>
                </LinearGradientBrush>
            </Border.Background>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30" />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition Width="25" />
                        <ColumnDefinition Width="25"/>
                        <ColumnDefinition Width="5"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="LOG IN"
                               Foreground="DarkGray"
                               FontSize="11"
                               FontFamily="Vertical"
                               Grid.Column="0"
                               VerticalAlignment="Center"
                               Margin="10,0,0,0" />

                    <Button Command="{Binding MinimizeCommand}"
                            Style="{StaticResource MaterialDesignFloatingActionMiniButton}"
                            Background="#22FFFFFF"
                            BorderBrush="#44FFFFFF"
                            BorderThickness="1"
                            Width="18" Height="18"
                            Grid.Column="1"
                            Cursor="Hand">
                        <materialIcons:MaterialIcon Kind="Minimize" Width="13" Height="13" Foreground="White"/>
                    </Button>

                    <Button Command="{Binding CloseCommand}"
                            Style="{StaticResource MaterialDesignFloatingActionMiniButton}"
                            Background="#fc0324"
                            BorderBrush="#44FFFFFF"
                            BorderThickness="1"
                            Width="18" Height="18"
                            Grid.Column="2"
                            Cursor="Hand">
                        <materialIcons:MaterialIcon Kind="WindowClose" Width="13" Height="13" Foreground="White"/>
                    </Button>
                </Grid>

                <StackPanel Width="250"
                            Grid.Row="2"
                            Orientation="Vertical"
                            Margin="0,35,0,0"
                            >
                    <Grid HorizontalAlignment="Center" >
                        <materialIcons:MaterialIcon Kind="HospitalBox" 
                                Width="96" Height="96" 
                                Opacity="1"
                                Foreground="{StaticResource AccentPurpleLight}">
                        </materialIcons:MaterialIcon>
                        <materialIcons:MaterialIcon Kind="HospitalBox" 
                                Width="94" Height="94">
                            <materialIcons:MaterialIcon.Foreground>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                    <GradientStop Color="#B0BCC7" Offset="0.1"/>
                                    <GradientStop Color="#2D3136" Offset="0.5"/>
                                    <GradientStop Color="#5A4FCF" Offset="1"/>
                                </LinearGradientBrush>
                            </materialIcons:MaterialIcon.Foreground>
                        </materialIcons:MaterialIcon>
                    </Grid>
                    <TextBlock Text="SYSTEM MEDYCZNY"
                               Foreground="White"
                               FontSize="16"
                               FontWeight="Light"
                               FontFamily="Verdana"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,0"/>
                    
                    <TextBlock Text="MEDICAL"
                               Foreground="White"
                               FontSize="40"
                               FontWeight="Medium"
                               FontFamily="Verdana"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,40"/>

                    <TextBox Text="{Binding Username, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                             materialDesign:HintAssist.Hint="Nazwa użytkownika"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             Foreground="White"
                             BorderBrush="{StaticResource PurpleBorder40}"
                             Margin="0,0,0,10">
                    </TextBox>

                    <!--<PasswordBox x:Name="PasswordInput"
                                 materialDesign:HintAssist.Hint="Hasło"
                                 Style="{StaticResource MaterialDesignOutlinedPasswordBox}"
                                 Foreground="White"
                                 BorderBrush="{StaticResource PurpleBorder40}"
                                 Margin="0,0,0,65">
                    </PasswordBox>-->

                    <controls:BindablePasswordBox Password="{Binding Password, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                        
                    </controls:BindablePasswordBox>

                    <TextBlock Text="{Binding ErrorMessage}"
                                 Foreground="{StaticResource MedicalAlert}"
                                 FontSize="12"
                                 FontWeight="Medium"
                                 FontFamily="Verdana"
                                 Margin="0,10,0,0"
                                 TextWrapping="Wrap"/>

                    <Button Command="{Binding LoginCommand}"
                            Content="Zaloguj się do konta"
                            Height="40"
                            FontSize="16"
                            FontWeight="SemiBold"
                            materialDesign:ButtonAssist.CornerRadius="4"
                            Style="{StaticResource MaterialDesignRaisedButton}"
                            BorderThickness="0"
                            Cursor="Hand"
                            Margin="0,30,0,0">
                    </Button>
                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Center"
                                Margin="0,15,0,0"
                                >
                        <TextBlock Text="Zapomiałeś Hasła?"
                                   Foreground="DarkGray"
                                   FontSize="12"
                                   FontWeight="Medium"
                                   FontFamily="Verdana" />
                        <TextBlock Text="Zresetuj"
                                   FontSize="12"
                                   FontWeight="Medium"
                                   FontFamily="Verdana" 
                                   Cursor="Hand"
                                   Margin="8,0,0,0">
                            <TextBlock.InputBindings>
                                <MouseBinding MouseAction="LeftClick" 
                                              Command="{Binding RecoverPasswordCommand}" />
                            </TextBlock.InputBindings>

                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Foreground" Value="White"/>
                                    <Setter Property="Opacity" Value="0.8"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Foreground" Value="{StaticResource AccentPurpleLight}"/>
                                            <Setter Property="Opacity" Value="1"/>
                                            <Setter Property="TextDecorations" Value="Underline"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>
    </Border>
</Window>
