<local:JedenViewBase x:Class="Medical.Views.NowaPozycjaFakturyView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Medical.Views"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:materialIcons="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
             xmlns:viewmodels="clr-namespace:Medical.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="900">

    <local:JedenViewBase.Resources>
        <Style x:Key="CardStyle" TargetType="materialDesign:Card">
            <Setter Property="Padding" Value="24"/>
            <Setter Property="UniformCornerRadius" Value="12"/>
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#2D3136" Offset="0"/>
                        <GradientStop Color="#1E2124" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderBrush" Value="#44FFFFFF"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
    </local:JedenViewBase.Resources>
    <Grid Background="{DynamicResource IndustrialGunmetal}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <materialDesign:Card Grid.Row="0"
                            UniformCornerRadius="12"
                            Padding="24"
                            Style="{StaticResource CardStyle}"
                            Margin="16">
            <StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,24">
                    <Border Background="#9D8FEF" Width="4" Height="16" CornerRadius="2" Margin="0,0,12,0"/>
                    <TextBlock Text="Powiązana Faktura" 
                               FontSize="15" 
                               FontWeight="Light"
                               Foreground="White"
                               VerticalAlignment="Center"/>
                </StackPanel>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0" Margin="0,0,0,16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="8"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBox Grid.Column="0"
                                 Text="{Binding FakturaNumer, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                 materialDesign:HintAssist.Hint="Numer Faktury"
                                 BorderBrush="#44FFFFFF"
                                 IsEnabled="False"
                                 Style="{DynamicResource MaterialDesignOutlinedTextBox}"/>

                        <Button Grid.Column="2"
                                Command="{Binding ShowFaktury}"
                                Style="{DynamicResource MaterialDesignRaisedButton}"
                                Background="#1E2124"
                                Height="50"
                                Padding="16,0"
                                ToolTip="Wybierz fakturę">
                            <materialIcons:MaterialIcon Kind="Receipt" Width="24" Height="24" Foreground="White"/>
                        </Button>
                    </Grid>

                    <TextBox Grid.Row="1"
                             Text="{Binding FakturaKontrahent, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                             materialDesign:HintAssist.Hint="Kontrahent"
                             BorderBrush="#44FFFFFF"
                             IsEnabled="False"
                             Style="{DynamicResource MaterialDesignOutlinedTextBox}"
                             Margin="0,0,0,16"/>
                </Grid>
            </StackPanel>
        </materialDesign:Card>
        <materialDesign:Card Grid.Row="1"
                             UniformCornerRadius="12"
                             Padding="24"
                             Style="{StaticResource CardStyle}"
                             Margin="16">
            <StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,24">
                    <Border Background="#9D8FEF" Width="4" Height="16" CornerRadius="2" Margin="0,0,12,0"/>
                    <TextBlock Text="Szczegóły Pozycji" 
                               FontSize="15" 
                               FontWeight="Light"
                               Foreground="White"
                               VerticalAlignment="Center"/>
                </StackPanel>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="16"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBox Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3"
                             Text="{Binding NazwaUslugi, UpdateSourceTrigger=PropertyChanged}"
                             materialDesign:HintAssist.Hint="Nazwa Usługi / Produktu"
                             BorderBrush="#44FFFFFF"
                             Style="{DynamicResource MaterialDesignOutlinedTextBox}"
                             Margin="0,0,0,16"/>

                    <TextBox Grid.Row="1" Grid.Column="0"
                             Text="{Binding Kod, UpdateSourceTrigger=PropertyChanged}"
                             materialDesign:HintAssist.Hint="Kod"
                             BorderBrush="#44FFFFFF"
                             Style="{DynamicResource MaterialDesignOutlinedTextBox}"
                             Margin="0,0,0,16"/>

                    <TextBox Grid.Row="1" Grid.Column="2"
                             Text="{Binding KategoriaPozycji, UpdateSourceTrigger=PropertyChanged}"
                             materialDesign:HintAssist.Hint="Kategoria Pozycji"
                             BorderBrush="#44FFFFFF"
                             Style="{DynamicResource MaterialDesignOutlinedTextBox}"
                             Margin="0,0,0,16"/>

                    <TextBox Grid.Row="2" Grid.Column="0"
                             Text="{Binding JednostkaMiary, UpdateSourceTrigger=PropertyChanged}"
                             materialDesign:HintAssist.Hint="Jednostka Miary (szt., godz.)"
                             BorderBrush="#44FFFFFF"
                             Style="{DynamicResource MaterialDesignOutlinedTextBox}"
                             Margin="0,0,0,16"/>
                </Grid>
            </StackPanel>
        </materialDesign:Card>
        <materialDesign:Card Grid.Row="2"
                             UniformCornerRadius="12"
                             Padding="24"
                             Style="{StaticResource CardStyle}"
                             Margin="16">
            <StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,24">
                    <Border Background="#9D8FEF" Width="4" Height="16" CornerRadius="2" Margin="0,0,12,0"/>
                    <TextBlock Text="Kalkulacja Kwot" 
                               FontSize="15" 
                               FontWeight="Light"
                               Foreground="White"
                               VerticalAlignment="Center"/>
                </StackPanel>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="16"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBox Grid.Row="0" Grid.Column="0"
                             Text="{Binding Ilosc, UpdateSourceTrigger=PropertyChanged, StringFormat=N2}"
                             materialDesign:HintAssist.Hint="Ilość"
                             BorderBrush="#44FFFFFF"
                             Style="{DynamicResource MaterialDesignOutlinedTextBox}"
                             Margin="0,0,0,16"/>

                    <TextBox Grid.Row="0" Grid.Column="2"
                             Text="{Binding CenaJednostkowaNetto, UpdateSourceTrigger=PropertyChanged, StringFormat=N2}"
                             materialDesign:HintAssist.Hint="Cena Jednostkowa Netto (PLN)"
                             BorderBrush="#44FFFFFF"
                             Style="{DynamicResource MaterialDesignOutlinedTextBox}"
                             Margin="0,0,0,16"/>

                    <TextBox Grid.Row="1" Grid.Column="0"
                             Text="{Binding StawkaVAT, UpdateSourceTrigger=PropertyChanged, StringFormat=N2}"
                             materialDesign:HintAssist.Hint="Stawka VAT (%)"
                             BorderBrush="#44FFFFFF"
                             Style="{DynamicResource MaterialDesignOutlinedTextBox}"
                             Margin="0,0,0,16"/>

                    <TextBox Grid.Row="1" Grid.Column="2"
                             Text="{Binding KwotaNetto, Mode=OneWay, StringFormat=N2}"
                             materialDesign:HintAssist.Hint="Kwota Netto (PLN)"
                             BorderBrush="#44FFFFFF"
                             IsReadOnly="True"
                             Style="{DynamicResource MaterialDesignOutlinedTextBox}"
                             Margin="0,0,0,16"/>

                    <TextBox Grid.Row="2" Grid.Column="0"
                             Text="{Binding KwotaVAT, Mode=OneWay, StringFormat=N2}"
                             materialDesign:HintAssist.Hint="Kwota VAT (PLN)"
                             BorderBrush="#44FFFFFF"
                             IsReadOnly="True"
                             Style="{DynamicResource MaterialDesignOutlinedTextBox}"
                             Margin="0,0,0,16"/>

                    <TextBox Grid.Row="2" Grid.Column="2"
                             Text="{Binding KwotaBrutto, Mode=OneWay, StringFormat=N2}"
                             materialDesign:HintAssist.Hint="Kwota Brutto (PLN)"
                             BorderBrush="#44FFFFFF"
                             IsReadOnly="True"
                             Style="{DynamicResource MaterialDesignOutlinedTextBox}"
                             Margin="0,0,0,16"/>
                </Grid>
            </StackPanel>
        </materialDesign:Card>
    </Grid>
</local:JedenViewBase>
