<UserControl x:Class="Medical.Views.AkredytacjaPlacowekView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:materialIcons="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
             xmlns:local="clr-namespace:Medical.Views" 
             xmlns:viewmodels="clr-namespace:Medical.ViewModels" 
             d:DataContext="{d:DesignInstance Type=viewmodels:AkredytacjaPlacowekViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="900">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/CardStyle.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <Style x:Key="StatCardStyle" TargetType="materialDesign:Card" BasedOn="{StaticResource CardStyle}">
                <Setter Property="Padding" Value="16"/>
                <Setter Property="Margin" Value="0,8,0,0"/>
            </Style>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid Background="{DynamicResource IndustrialGunmetal}">
      
        <ScrollViewer VerticalScrollBarVisibility="Auto" 
                      Padding="24"
                      Style="{StaticResource IndustrialScrollViewer}">
            <StackPanel >
                <materialDesign:Card Style="{StaticResource CardStyle}" Margin="0,0,0,16">
                    <StackPanel Orientation="Horizontal">
                        <Border Background="{DynamicResource AccentPurple}" 
                                Width="4" 
                                Height="48" 
                                CornerRadius="2" 
                                Margin="0,0,16,0"
                                VerticalAlignment="Center">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="8" ShadowDepth="0" Color="#9D8FEF" Opacity="0.4"/>
                            </Border.Effect>
                        </Border>

                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="SYSTEM AKREDYTACJI PLACÓWEK MEDYCZNYCH" 
                                       FontSize="20" 
                                       FontWeight="SemiBold"
                                       Foreground="White"/>
                        </StackPanel>
                    </StackPanel>
                </materialDesign:Card>

                <materialDesign:Card Style="{StaticResource CardStyle}" Margin="0,0,0,16">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                            <Border Background="{DynamicResource AccentPurple}" 
                                    Width="4" 
                                    Height="16" 
                                    CornerRadius="2" 
                                    Margin="0,0,12,0"
                                    VerticalAlignment="Center"/>
                            <TextBlock Text="Parametry Oceny" 
                                       FontSize="15" 
                                       FontWeight="Light"
                                       Foreground="White"
                                       VerticalAlignment="Center"/>
                        </StackPanel>

                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="16"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <DatePicker Grid.Row="0" Grid.Column="0" 
                                        Margin="0,0,0,16"
                                        SelectedDate="{Binding DataOd, UpdateSourceTrigger=PropertyChanged}"
                                        materialDesign:HintAssist.Hint="Data od"
                                        BorderBrush="#44FFFFFF" 
                                        Style="{StaticResource MaterialDesignOutlinedDatePicker}"/>

                            <DatePicker Grid.Row="0" Grid.Column="2" 
                                        Margin="0,0,0,16"
                                        SelectedDate="{Binding DataDo, UpdateSourceTrigger=PropertyChanged}"
                                        materialDesign:HintAssist.Hint="Data do"
                                        BorderBrush="#44FFFFFF"
                                        Style="{StaticResource MaterialDesignOutlinedDatePicker}"/>

                            <TextBox Grid.Row="1" Grid.Column="0" 
                                     Margin="0,0,0,16"
                                     Text="{Binding MinimalnaLiczbaOcen, UpdateSourceTrigger=PropertyChanged}"
                                     materialDesign:HintAssist.Hint="Minimalna liczba ocen (np. 10)"
                                     BorderBrush="#44FFFFFF"
                                     Style="{StaticResource MaterialDesignOutlinedTextBox}"/>

                            <ComboBox Grid.Row="1" Grid.Column="2" 
                                      Margin="0,0,0,16"
                                      ItemsSource="{Binding PlacowkiComboBoxItems}" 
                                      DisplayMemberPath="Value"
                                      SelectedValuePath="Key"
                                      SelectedValue="{Binding IdPlacowki, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                      materialDesign:HintAssist.Hint="Filtruj placówkę"
                                      BorderBrush="#44FFFFFF"
                                      Style="{StaticResource MaterialDesignOutlinedComboBox}"/>

                            <ComboBox Grid.Row="2" Grid.Column="0" 
                                      Grid.ColumnSpan="3" 
                                      Margin="0,0,0,16"
                                      ItemsSource="{Binding SortPointsItems}"
                                      DisplayMemberPath="Value"
                                      SelectedValuePath="Key"
                                      SelectedValue="{Binding SortPoints, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource IntToEnumConverter}}"
                                      materialDesign:HintAssist.Hint="Sortowanie"
                                      BorderBrush="#44FFFFFF"
                                      Style="{StaticResource MaterialDesignOutlinedComboBox}"/>
                        </Grid>

                        <Separator Background="#44FFFFFF" Margin="0,8,0,24"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <Button Grid.Column="1"
                                    Command="{Binding OcenAkredytacjeCommand}"
                                    Style="{StaticResource MaterialDesignRaisedButton}"
                                    Background="{DynamicResource AccentPurple}"
                                    Height="40" 
                                    Padding="24,0" 
                                    Margin="0,0,12,0">
                                <StackPanel Orientation="Horizontal">
                                    <materialIcons:MaterialIcon Kind="CheckDecagram" 
                                                               Width="20" Height="20" 
                                                               Margin="0,0,8,0"
                                                               Foreground="White"/>
                                    <TextBlock Text="Oceń Akredytację" 
                                               VerticalAlignment="Center"
                                               Foreground="White"/>
                                </StackPanel>
                            </Button>

                            <Button Grid.Column="2"
                                    Command="{Binding ResetujCommand}"
                                    Style="{StaticResource MaterialDesignOutlinedButton}"
                                    BorderBrush="#44FFFFFF"
                                    Foreground="White"
                                    Height="40" 
                                    Padding="24,0">
                                <StackPanel Orientation="Horizontal">
                                    <materialIcons:MaterialIcon Kind="Refresh" 
                                                               Width="20" Height="20" 
                                                               Margin="0,0,8,0"
                                                               Foreground="White"/>
                                    <TextBlock Text="Resetuj" 
                                               VerticalAlignment="Center"
                                               Foreground="White"/>
                                </StackPanel>
                            </Button>
                        </Grid>
                    </StackPanel>
                </materialDesign:Card>

                <Grid Margin="0,0,0,16">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <materialDesign:Card Grid.Column="0" Style="{StaticResource StatCardStyle}" Margin="0,0,4,0">
                        <StackPanel>
                            <Border Background="{DynamicResource AccentPurple}" 
                                    Height="2" 
                                    Width="40" 
                                    HorizontalAlignment="Center" 
                                    Margin="0,0,0,8" 
                                    CornerRadius="1"/>
                            <TextBlock Text="Liczba Placówek" 
                                       FontSize="13" 
                                       FontWeight="Light"
                                       Foreground="#88FFFFFF"
                                       HorizontalAlignment="Center"/>
                            <TextBlock Text="{Binding LiczbaPlacowek}" 
                                       FontSize="36" 
                                       FontWeight="Bold"
                                       Foreground="{DynamicResource AccentPurpleLight}"
                                       HorizontalAlignment="Center"
                                       Padding="0,12"/>
                            <TextBlock Text="AKTUALNE DANE" 
                                       FontSize="9" 
                                       FontWeight="Medium"
                                       Foreground="#44FFFFFF"
                                       HorizontalAlignment="Center"/>
                        </StackPanel>
                    </materialDesign:Card>

                    <materialDesign:Card Grid.Column="1" Style="{StaticResource StatCardStyle}" Margin="4,0,4,0">
                        <StackPanel>
                            <Border Background="#4CAF50" 
                                    Height="2" 
                                    Width="40" 
                                    HorizontalAlignment="Center" 
                                    Margin="0,0,0,8" 
                                    CornerRadius="1"/>
                            <TextBlock Text="Akredytowanych" 
                                       FontSize="13" 
                                       FontWeight="Light"
                                       Foreground="#88FFFFFF"
                                       HorizontalAlignment="Center"/>
                            <TextBlock Text="{Binding LiczbaAkredytowanych}" 
                                       FontSize="36" 
                                       FontWeight="Bold"
                                       Foreground="#4CAF50"
                                       HorizontalAlignment="Center"
                                       Padding="0,12"/>
                            <TextBlock Text="WERYFIKACJA OK" 
                                       FontSize="9" 
                                       FontWeight="Medium"
                                       Foreground="#44FFFFFF"
                                       HorizontalAlignment="Center"/>
                        </StackPanel>
                    </materialDesign:Card>

                    <materialDesign:Card Grid.Column="2" Style="{StaticResource StatCardStyle}" Margin="4,0,4,0">
                        <StackPanel>
                            <Border Background="#FFC107" 
                                    Height="2" 
                                    Width="40" 
                                    HorizontalAlignment="Center" 
                                    Margin="0,0,0,8" 
                                    CornerRadius="1"/>
                            <TextBlock Text="Procent Akredytacji" 
                                       FontSize="13" 
                                       FontWeight="Light"
                                       Foreground="#88FFFFFF"
                                       HorizontalAlignment="Center"/>
                            <TextBlock Text="{Binding ProcentAkredytowanych, StringFormat={}{0:N1}%}" 
                                       FontSize="36" 
                                       FontWeight="Bold"
                                       Foreground="#FFC107"
                                       HorizontalAlignment="Center"
                                       Padding="0,12"/>
                            <TextBlock Text="SKUTECZNOŚĆ" 
                                       FontSize="9" 
                                       FontWeight="Medium"
                                       Foreground="#44FFFFFF"
                                       HorizontalAlignment="Center"/>
                        </StackPanel>
                    </materialDesign:Card>

                    <materialDesign:Card Grid.Column="3" Style="{StaticResource StatCardStyle}" Margin="4,0,0,0">
                        <StackPanel>
                            <Border Background="#2196F3" 
                                    Height="2" 
                                    Width="40" 
                                    HorizontalAlignment="Center" 
                                    Margin="0,0,0,8" 
                                    CornerRadius="1"/>
                            <TextBlock Text="Średnia Punktów" 
                                       FontSize="13" 
                                       FontWeight="Light"
                                       Foreground="#88FFFFFF"
                                       HorizontalAlignment="Center"/>
                            <TextBlock Text="{Binding SredniaPunktow, StringFormat=N1}" 
                                       FontSize="36" 
                                       FontWeight="Bold"
                                       Foreground="#2196F3"
                                       HorizontalAlignment="Center"
                                       Padding="0,12"/>
                            <TextBlock Text="RANKING ŚREDNI" 
                                       FontSize="9" 
                                       FontWeight="Medium"
                                       Foreground="#44FFFFFF"
                                       HorizontalAlignment="Center"/>
                        </StackPanel>
                    </materialDesign:Card>
                </Grid>

                <materialDesign:Card Style="{StaticResource CardStyle}" Margin="0,0,0,16">
                    <StackPanel>
                        <Grid Margin="0,0,0,16">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Orientation="Horizontal">
                                <Border Background="{DynamicResource AccentPurple}" 
                                        Width="4" 
                                        Height="16" 
                                        CornerRadius="2" 
                                        Margin="0,0,12,0"
                                        VerticalAlignment="Center"/>
                                <TextBlock Text="WYNIKI AKREDYTACJI" 
                                           FontSize="15" 
                                           FontWeight="Light"
                                           Foreground="White"
                                           VerticalAlignment="Center"/>
                            </StackPanel>

                            <Button Grid.Column="1"
                                    Style="{StaticResource MaterialDesignFlatButton}"
                                    Command="{Binding EksportujCommand}"
                                    Foreground="White"
                                    ToolTip="Eksportuj do Excel">
                                <StackPanel Orientation="Horizontal">
                                    <materialIcons:MaterialIcon Kind="FileExcel" 
                                                               Width="16" Height="16" 
                                                               Margin="0,0,8,0"
                                                               Foreground="{DynamicResource AccentPurple}"/>
                                    <TextBlock Text="EKSPORTUJ" 
                                               FontWeight="SemiBold" 
                                               FontSize="13"/>
                                </StackPanel>
                            </Button>
                        </Grid>

                        <DataGrid ItemsSource="{Binding WynikiAkredytacji}"
                                  AutoGenerateColumns="False"
                                  CanUserAddRows="False"
                                  IsReadOnly="True"
                                  Background="Transparent"
                                  RowBackground="#2D3136"
                                  AlternatingRowBackground="#252830"
                                  BorderBrush="#44FFFFFF"
                                  BorderThickness="1"
                                  Foreground="White"
                                  GridLinesVisibility="Horizontal"
                                  HorizontalGridLinesBrush="#22FFFFFF"
                                  materialDesign:DataGridAssist.CellPadding="12,12"
                                  materialDesign:DataGridAssist.ColumnHeaderPadding="12,15">
                            <DataGrid.ColumnHeaderStyle>
                                <Style TargetType="DataGridColumnHeader" BasedOn="{StaticResource {x:Type DataGridColumnHeader}}">
                                    <Setter Property="Background" Value="{DynamicResource AccentPurple}"/>
                                    <Setter Property="Foreground" Value="White"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                    <Setter Property="FontSize" Value="11"/>
                                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                </Style>
                            </DataGrid.ColumnHeaderStyle>

                            <DataGrid.Columns>
                                <DataGridTextColumn Header="#" Binding="{Binding Pozycja}" Width="50">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="FontWeight" Value="Bold"/>
                                            <Setter Property="Foreground" Value="{DynamicResource AccentPurpleLight}"/>
                                            <Setter Property="VerticalAlignment" Value="Center"/>
                                            <Setter Property="HorizontalAlignment" Value="Center"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>

                                <DataGridTextColumn Header="PLACÓWKA" Binding="{Binding NazwaPlacowki}" Width="*" MinWidth="150">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="FontWeight" Value="SemiBold"/>
                                            <Setter Property="Foreground" Value="White"/>
                                            <Setter Property="VerticalAlignment" Value="Center"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>

                                <DataGridTemplateColumn Header="OCENY ZESPOŁÓW" Width="160">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Margin="0,4">
                                                <TextBlock Foreground="White">
                                                    <Run Text="Średnia: " FontSize="11" Foreground="#88FFFFFF"/>
                                                    <Run Text="{Binding SredniaOcenaZespolow, StringFormat=N2}" FontWeight="SemiBold"/>
                                                </TextBlock>
                                                <TextBlock Text="{Binding PunktyZaOceny, StringFormat='PUNKTY: {0}/40'}" 
                                                           FontSize="11" 
                                                           FontWeight="Bold" 
                                                           Foreground="#64B5F6" 
                                                           Margin="0,4,0,0"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                                <DataGridTemplateColumn Header="INTERWENCJE" Width="120">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel VerticalAlignment="Center">
                                                <TextBlock Text="{Binding LiczbaInterwencji, StringFormat='Ilość: {0}'}" 
                                                           FontSize="11" 
                                                           Foreground="#88FFFFFF"/>
                                                <TextBlock Text="{Binding PunktyZaInterwencje, StringFormat='PUNKTY: {0}/40'}" 
                                                           FontSize="11" 
                                                           FontWeight="Bold" 
                                                           Foreground="#81C784"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                                <DataGridTextColumn Header="SUMA" Binding="{Binding LacznePunkty, StringFormat='{}{0}/100'}" Width="100">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="FontWeight" Value="Bold"/>
                                            <Setter Property="FontSize" Value="15"/>
                                            <Setter Property="Foreground" Value="White"/>
                                            <Setter Property="HorizontalAlignment" Value="Center"/>
                                            <Setter Property="VerticalAlignment" Value="Center"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>

                                <DataGridTemplateColumn Header="STATUS" Width="150">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Border CornerRadius="4" 
                                                    Padding="8,4" 
                                                    HorizontalAlignment="Left" 
                                                    BorderThickness="1">
                                                <Border.Style>
                                                    <Style TargetType="Border">
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding KolorStatusu}" Value="Green">
                                                                <Setter Property="Background" Value="#1B5E20"/>
                                                                <Setter Property="BorderBrush" Value="#4CAF50"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding KolorStatusu}" Value="Red">
                                                                <Setter Property="Background" Value="#B71C1C"/>
                                                                <Setter Property="BorderBrush" Value="#FF5252"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Border.Style>
                                                <TextBlock HorizontalAlignment="Center" 
                                                          VerticalAlignment="Center" 
                                                          Text="{Binding StatusAkredytacji}" 
                                                          FontSize="10" 
                                                          FontWeight="Bold"
                                                          Foreground="White"/>
                                            </Border>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                        <StackPanel Visibility="{Binding BrakDanych, Converter={StaticResource BooleanToVisibilityConverter}}"
                                    Margin="0,60">
                            <Border Background="{DynamicResource AccentPurple}"
                                    Width="80"
                                    Height="80"
                                    CornerRadius="40"
                                    HorizontalAlignment="Center"
                                    Opacity="0.3">
                                <materialIcons:MaterialIcon Kind="DatabaseSearch" 
                                                           Width="48" Height="48" 
                                                           Foreground="White" 
                                                           HorizontalAlignment="Center"
                                                           VerticalAlignment="Center"/>
                            </Border>
                            <TextBlock Text="BRAK DANYCH SYSTEMOWYCH" 
                                       FontSize="16" 
                                       FontWeight="Light" 
                                       Foreground="White" 
                                       HorizontalAlignment="Center" 
                                       Margin="0,16,0,8"/>
                            <TextBlock Text="Oceń akredytację, aby zobaczyć wyniki" 
                                       FontSize="13"
                                       Foreground="#88FFFFFF"
                                       HorizontalAlignment="Center"/>
                        </StackPanel>
                    </StackPanel>
                </materialDesign:Card>

                <materialDesign:Card Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,24">
                            <Border Background="{DynamicResource AccentPurple}" 
                                    Width="4" 
                                    Height="16" 
                                    CornerRadius="2" 
                                    Margin="0,0,12,0"
                                    VerticalAlignment="Center"/>
                            <TextBlock Text="System Punktacji" 
                                       FontSize="15" 
                                       FontWeight="Light"
                                       Foreground="White"
                                       VerticalAlignment="Center"/>
                        </StackPanel>

                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <Border Grid.Row="0" 
                                    BorderBrush="#2196F3" 
                                    BorderThickness="2,0,0,0" 
                                    Padding="16,8" 
                                    Margin="0,0,0,12">
                                <StackPanel>
                                    <TextBlock Text="Oceny Zespołów (max 40 pkt)" 
                                               FontWeight="SemiBold" 
                                               FontSize="13" 
                                               Foreground="#64B5F6"/>
                                    <TextBlock Text="Średnia ocena zespołów (0-25 pkt)" 
                                               FontSize="12" 
                                               Margin="8,4,0,0" 
                                               Foreground="#88FFFFFF"/>
                                    <TextBlock Text="Liczba zebranych ocen (0-15 pkt)" 
                                               FontSize="12" 
                                               Margin="8,2,0,0" 
                                               Foreground="#88FFFFFF"/>
                                </StackPanel>
                            </Border>

                            <Border Grid.Row="1" 
                                    BorderBrush="#4CAF50" 
                                    BorderThickness="2,0,0,0" 
                                    Padding="16,8" 
                                    Margin="0,0,0,12">
                                <StackPanel>
                                    <TextBlock Text="Interwencje Medyczne (max 40 pkt)" 
                                               FontWeight="SemiBold" 
                                               FontSize="13" 
                                               Foreground="#81C784"/>
                                    <TextBlock Text="Liczba udzielonych pomocy w okresie (0-40 pkt)" 
                                               FontSize="12" 
                                               Margin="8,4,0,0" 
                                               Foreground="#88FFFFFF"/>
                                </StackPanel>
                            </Border>

                            <Border Grid.Row="2" 
                                    BorderBrush="#FFC107" 
                                    BorderThickness="2,0,0,0" 
                                    Padding="16,8" 
                                    Margin="0,0,0,12">
                                <StackPanel>
                                    <TextBlock Text="Zasoby Operacyjne (max 20 pkt)" 
                                               FontWeight="SemiBold" 
                                               FontSize="13" 
                                               Foreground="#FFB74D"/>
                                    <TextBlock Text="Liczba aktywnych zespołów (0-10 pkt)" 
                                               FontSize="12" 
                                               Margin="8,4,0,0" 
                                               Foreground="#88FFFFFF"/>
                                    <TextBlock Text="Liczba sprawnych karetek (0-10 pkt)" 
                                               FontSize="12" 
                                               Margin="8,2,0,0" 
                                               Foreground="#88FFFFFF"/>
                                </StackPanel>
                            </Border>

                            <Border Grid.Row="3" 
                                    Background="#222628" 
                                    Padding="16" 
                                    CornerRadius="8" 
                                    BorderBrush="{DynamicResource AccentPurple}" 
                                    BorderThickness="1">
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <materialIcons:MaterialIcon Kind="ShieldCheck" 
                                                               Foreground="#81C784" 
                                                               Width="20" Height="20" 
                                                               Margin="0,0,12,0" 
                                                               VerticalAlignment="Center"/>
                                    <TextBlock FontSize="14" 
                                              VerticalAlignment="Center" 
                                              Foreground="White">
                                        <Run Text="PRÓG AKREDYTACJI:" FontWeight="Bold"/>
                                        <Run Text=" 35 PUNKTÓW" FontWeight="Bold" Foreground="#81C784"/>
                                        <Run Text=" / 100 MOŻLIWYCH" FontSize="11" Foreground="#88FFFFFF"/>
                                    </TextBlock>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </StackPanel>
                </materialDesign:Card>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>