<UserControl x:Class="Medical.Views.AkredytacjaPlacowekView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:materialIcons="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
             xmlns:local="clr-namespace:Medical.Views" 
             xmlns:viewmodels="clr-namespace:Medical.ViewModels" 
             d:DataContext="{d:DesignInstance Type=viewmodels:AkredytacjaPlacowekViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="900">

    <UserControl.Resources>
        <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Foreground" Value="{DynamicResource PrimaryHueMidBrush}"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
        </Style>
        <Style x:Key="ResultCardStyle" TargetType="materialDesign:Card">
            <Setter Property="Padding" Value="24"/>
            <Setter Property="UniformCornerRadius" Value="12"/>
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#CC1A1C1E" Offset="0"/>
                        <GradientStop Color="#AA2D2F31" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderBrush" Value="#44FFFFFF"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Margin" Value="0,8,4,0"/>
        </Style>
        <Style x:Key="PremiumHeaderStyle" TargetType="TextBlock">
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Light"/>
            <Setter Property="Foreground" Value="{DynamicResource MaterialDesignBody}"/>
            <Setter Property="Opacity" Value="1"/>
        </Style>

        <Style x:Key="PremiumValueStyle" TargetType="TextBlock">
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Padding" Value="0,12"/>
            <Setter Property="FontSize" Value="54"/>
            <Setter Property="FontWeight" Value="Regular"/>
            <Setter Property="Foreground" Value="{DynamicResource MaterialDesignBody}"/>
        </Style>

        <Style x:Key="PremiumSubStyle" TargetType="TextBlock">
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="8"/>
            <Setter Property="Foreground" Value="{DynamicResource MaterialDesignBody}"/>
            <Setter Property="Opacity" Value="0.3"/>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,0">
                <GradientStop Color="#2D3136" Offset="0"/>
                <GradientStop Color="#1E2124" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="24">
            <StackPanel Margin="24">
                <materialDesign:Card Style="{StaticResource ResultCardStyle}" 
                     Padding="32,24" 
                     Margin="0,0,0,20">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Border Grid.Column="0" 
                                Width="4" 
                                Background="#9D8FEF" 
                                CornerRadius="2" 
                                Margin="0,4,24,4">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="8" ShadowDepth="1" Color="#9D8FEF" Opacity="0.3"/>
                            </Border.Effect>
                        </Border>

                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock Text="SYSTEM AKREDYTACJI PLACÓWEK MEDYCZNYCH" 
                                       FontSize="24" 
                                       FontWeight="ExtraBold"
                                       Foreground="{DynamicResource MaterialDesignBody}">
                            </TextBlock>

                            <TextBlock Text="Ocena kompleksowa na podstawie wydajności zespołów, interwencji i zasobów" 
                                       FontSize="13" 
                                       FontWeight="Medium"
                                       Foreground="{DynamicResource MaterialDesignBody}"
                                       Opacity="0.5"
                                       Margin="0,4,0,0"/>
                        </StackPanel>
                    </Grid>
                </materialDesign:Card>
                
                <materialDesign:Card Style="{StaticResource ResultCardStyle}" Padding="24" Margin="0,0,0,20">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,24">
                            <Border Background="#9D8FEF" Width="4" Height="16" CornerRadius="2" Margin="0,0,12,0"/>
                            <TextBlock Text="Parametry Oceny" 
                                       FontSize="14" 
                                       FontWeight="Bold"
                                       Foreground="{DynamicResource MaterialDesignBody}"
                                       Opacity="0.8"
                                       VerticalAlignment="Center"/>
                        </StackPanel>

                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="16"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <DatePicker Grid.Row="0" Grid.Column="0" Margin="0,0,0,16"
                                        SelectedDate="{Binding DataOd, UpdateSourceTrigger=PropertyChanged}"
                                        materialDesign:HintAssist.Hint="Data od"
                                        BorderBrush="#44FFFFFF" 
                                        Style="{StaticResource MaterialDesignOutlinedDatePicker}"/>

                            <DatePicker Grid.Row="0" Grid.Column="2" Margin="0,0,0,16"
                                        SelectedDate="{Binding DataDo, UpdateSourceTrigger=PropertyChanged}"
                                        materialDesign:HintAssist.Hint="Data do"
                                        BorderBrush="#44FFFFFF"
                                        Style="{StaticResource MaterialDesignOutlinedDatePicker}"/>

                            <TextBox Grid.Row="1" Grid.Column="0" Margin="0,0,0,16"
                                     Text="{Binding MinimalnaLiczbaOcen, UpdateSourceTrigger=PropertyChanged}"
                                     materialDesign:HintAssist.Hint="Minimalna liczba ocen (np. 10)"
                                     BorderBrush="#44FFFFFF"
                                     Style="{StaticResource MaterialDesignOutlinedTextBox}"/>

                            <ComboBox Grid.Row="1" Grid.Column="2" Margin="0,0,0,16"
                                      ItemsSource="{Binding PlacowkiComboBoxItems}" 
                                      DisplayMemberPath="Value"
                                      SelectedValuePath="Key"
                                      SelectedValue="{Binding IdPlacowki, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                      materialDesign:HintAssist.Hint="Filtruj placówkę"
                                      BorderBrush="#44FFFFFF"
                                      Style="{StaticResource MaterialDesignOutlinedComboBox}"/>

                            <ComboBox Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3" Margin="0,0,0,16"
                                      ItemsSource="{Binding SortPointsItems}"
                                      DisplayMemberPath="Value"
                                      SelectedValuePath="Key"
                                      SelectedValue="{Binding SortPoints, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource IntToEnumConverter}}"
                                      materialDesign:HintAssist.Hint="Sortowanie"
                                      BorderBrush="#44FFFFFF"
                                      Style="{StaticResource MaterialDesignOutlinedComboBox}"/>
                        </Grid>

                        <Separator Background="{DynamicResource MaterialDesignDivider}" Margin="0,8,0,24"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <Button Grid.Column="1"
                                    Command="{Binding OcenAkredytacjeCommand}"
                                    Style="{StaticResource MaterialDesignRaisedButton}"
                                    Height="40" Padding="24,0" Margin="0,0,12,0">
                                <StackPanel Orientation="Horizontal">
                                    <materialIcons:MaterialIcon Kind="CheckDecagram" Width="20" Height="20" Margin="0,0,8,0"/>
                                    <TextBlock Text="Oceń Akredytację" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>

                            <Button Grid.Column="2"
                                    Command="{Binding ResetujCommand}"
                                    Style="{StaticResource MaterialDesignOutlinedButton}"
                                    Height="40" Padding="24,0">
                                <StackPanel Orientation="Horizontal">
                                    <materialIcons:MaterialIcon Kind="Refresh" Width="20" Height="20" Margin="0,0,8,0"/>
                                    <TextBlock Text="Resetuj" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                        </Grid>
                    </StackPanel>
                </materialDesign:Card>
                <Grid Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <materialDesign:Card Grid.Column="0" Style="{StaticResource ResultCardStyle}" Margin="0,0,4,0">
                        <StackPanel>
                            <Border Background="#9D8FEF" Height="2" Width="40" HorizontalAlignment="Center" Margin="0,0,0,8" CornerRadius="1"/>
                            <TextBlock Text="Liczba Placówek" Style="{StaticResource PremiumHeaderStyle}"/>
                            <TextBlock Text="{Binding LiczbaPlacowek}" Style="{StaticResource PremiumValueStyle}"/>
                            <TextBlock Text="AKTUALNE DANE" Style="{StaticResource PremiumSubStyle}"/>
                        </StackPanel>
                    </materialDesign:Card>

                    <materialDesign:Card Grid.Column="1" Style="{StaticResource ResultCardStyle}" Margin="4,0,4,0">
                        <StackPanel>
                            <Border Background="#2E7D32" Height="2" Width="40" HorizontalAlignment="Center" Margin="0,0,0,8" CornerRadius="1"/>
                            <TextBlock Text="Akredytowanych" Style="{StaticResource PremiumHeaderStyle}"/>
                            <TextBlock Text="{Binding LiczbaAkredytowanych}" Style="{StaticResource PremiumValueStyle}"/>
                            <TextBlock Text="WERYFIKACJA OK" Style="{StaticResource PremiumSubStyle}"/>
                        </StackPanel>
                    </materialDesign:Card>

                    <materialDesign:Card Grid.Column="2" 
                     Style="{StaticResource ResultCardStyle}" 
                     Margin="4,0,4,0">
                        <StackPanel>
                            <Border Background="#FFB300" 
                                    Height="2" Width="40" 
                                    HorizontalAlignment="Center" 
                                    Margin="0,0,0,8" 
                                    CornerRadius="1"/>
                            <TextBlock Text="Procent Akredytacji" Style="{StaticResource PremiumHeaderStyle}"/>
                            <TextBlock Text="{Binding ProcentAkredytowanych, StringFormat={}{0:N1}%}" Style="{StaticResource PremiumValueStyle}"/>
                            <TextBlock Text="SKUTECZNOŚĆ" Style="{StaticResource PremiumSubStyle}"/>
                        </StackPanel>
                    </materialDesign:Card>

                    <materialDesign:Card Grid.Column="3" Style="{StaticResource ResultCardStyle}" Margin="4,0,0,0">
                        <StackPanel>
                            <Border Background="#2196F3" Height="2" Width="40" HorizontalAlignment="Center" Margin="0,0,0,8" CornerRadius="1"/>
                            <TextBlock Text="Średnia Punktów" Style="{StaticResource PremiumHeaderStyle}"/>
                            <TextBlock Text="{Binding SredniaPunktow, StringFormat=N1}" Style="{StaticResource PremiumValueStyle}"/>
                            <TextBlock Text="RANKING ŚREDNI" Style="{StaticResource PremiumSubStyle}"/>
                        </StackPanel>
                    </materialDesign:Card>
                   
                </Grid>

