<UserControl x:Class="Medical.Views.AkredytacjaPlacowekView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:materialIcons="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
             xmlns:local="clr-namespace:Medical.Views" 
             xmlns:viewmodels="clr-namespace:Medical.ViewModels" 
             d:DataContext="{d:DesignInstance Type=viewmodels:AkredytacjaPlacowekViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="900">

    <UserControl.Resources>
        <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Foreground" Value="{DynamicResource PrimaryHueMidBrush}"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
        </Style>

        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Foreground" Value="{DynamicResource MaterialDesignBody}"/>
        </Style>

        <Style x:Key="ResultCardStyle" TargetType="materialDesign:Card">
            <Setter Property="Padding" Value="16"/>
            <Setter Property="Margin" Value="0,8,0,0"/>
            <Setter Property="UniformCornerRadius" Value="8"/>
        </Style>
    </UserControl.Resources>

    <Grid Background="{DynamicResource MaterialDesignPaper}">
        <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="24">
            <StackPanel Margin="24">
                <materialDesign:Card UniformCornerRadius="8" Padding="20" Margin="0,0,0,20">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center">
                            <Border BorderThickness="2" BorderBrush="#9D8FEF"/>
                            <TextBlock Text="System Akredytacji Placówek Medycznych" 
                                       FontSize="28" 
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource MaterialDesignBody}"
                                       Padding="0,4,0,4"/>
                            <TextBlock Text="Ocena kompleksowa na podstawie wydajności zespołów, interwencji i zasobów" 
                                       FontSize="13" 
                                       FontWeight="Normal"
                                       Foreground="{DynamicResource MaterialDesignBodyLight}"
                                       HorizontalAlignment="Center"
                                       Padding="0,4,0,0"/>
                        </StackPanel>
                    </Grid>
                </materialDesign:Card>

                <materialDesign:Card UniformCornerRadius="8" Padding="20" Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Margin="0,0,0,20" FontSize="16" FontWeight="SemiBold" Text="Parametry Oceny" Foreground="{DynamicResource AccentPurple}"/>

                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="16"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <DatePicker Grid.Row="0" Grid.Column="0" 
                                        Margin="0,0,0,16"
                                        SelectedDate="{Binding DataOd, UpdateSourceTrigger=PropertyChanged}"
                                        materialDesign:HintAssist.Hint="Data od"
                                        Style="{DynamicResource MaterialDesignOutlinedDatePicker}"/>

                            <DatePicker Grid.Row="0" Grid.Column="2" 
                                        Margin="0,0,0,16"
                                        SelectedDate="{Binding DataDo, UpdateSourceTrigger=PropertyChanged}"
                                        materialDesign:HintAssist.Hint="Data do"
                                        Style="{DynamicResource MaterialDesignOutlinedDatePicker}"/>

                            <TextBox Grid.Row="1" Grid.Column="0" 
                                     Margin="0,0,0,16"
                                     Text="{Binding MinimalnaLiczbaOcen, UpdateSourceTrigger=PropertyChanged}"
                                     materialDesign:HintAssist.Hint="Minimalna liczba ocen (np. 10)"
                                     Style="{DynamicResource MaterialDesignOutlinedTextBox}"/>

                            <ComboBox Grid.Row="1" Grid.Column="2" 
                                      Margin="0,0,0,16"
                                      ItemsSource="{Binding PlacowkiComboBoxItems}" 
                                      DisplayMemberPath="Value"
                                      SelectedValuePath="Key"
                                      SelectedValue="{Binding IdPlacowki, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                      materialDesign:HintAssist.Hint="Filtruj placówkę"
                                      Style="{DynamicResource MaterialDesignOutlinedComboBox}"/>

                            <ComboBox Grid.Row="2" Grid.Column="0"
                                      Grid.ColumnSpan="3"
                                      Margin="0,0,0,16"
                                      SelectedIndex="{Binding SortOrder, UpdateSourceTrigger=PropertyChanged}"
                                      materialDesign:HintAssist.Hint="Sortowanie"
                                      Style="{DynamicResource MaterialDesignOutlinedComboBox}">
                                <ComboBoxItem Content="Suma punktów (malejąco)"/>
                                <ComboBoxItem Content="Suma punktów (rosnąco)"/>
                                <ComboBoxItem Content="Akredytowane na początku"/>
                            </ComboBox>
                        </Grid>

                        <Separator Background="{DynamicResource MaterialDesignDivider}" Margin="0,8,0,24"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <Button Grid.Column="1"
                                    Command="{Binding OcenAkredytacjeCommand}"
                                    Style="{StaticResource MaterialDesignRaisedButton}"
                                    Height="40"
                                    Padding="24,0"
                                    Margin="0,0,12,0">
                                <StackPanel Orientation="Horizontal">
                                    <materialIcons:MaterialIcon Kind="CheckDecagram" 
                                                               Width="20" Height="20" 
                                                               Margin="0,0,8,0"/>
                                    <TextBlock Text="Oceń Akredytację" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>

                            <Button Grid.Column="2"
                                    Command="{Binding ResetujCommand}"
                                    Style="{StaticResource MaterialDesignOutlinedButton}"
                                    Height="40"
                                    Padding="24,0">
                                <StackPanel Orientation="Horizontal">
                                    <materialIcons:MaterialIcon Kind="Refresh" 
                                                               Width="20" Height="20" 
                                                               Margin="0,0,8,0"/>
                                    <TextBlock Text="Resetuj" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                        </Grid>
                    </StackPanel>
                </materialDesign:Card>

                <Grid Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <materialDesign:Card Grid.Column="0" 
                                         Style="{StaticResource ResultCardStyle}"
                                         Margin="0,0,4,0">
                        <StackPanel>
                            <TextBlock Text="Liczba Placówek" 
                                       VerticalAlignment="Top" 
                                       HorizontalAlignment="Center"
                                       FontSize="14"
                                       Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                            <TextBlock Text="{Binding LiczbaPlacowek}" 
                                       VerticalAlignment="Center" 
                                       HorizontalAlignment="Center"
                                       Padding="0,24"
                                       FontSize="38" 
                                       FontWeight="Bold"
                                       Foreground="{DynamicResource MaterialDesignBody}"/>
                        </StackPanel>
                    </materialDesign:Card>

                    <materialDesign:Card Grid.Column="1" 
                                         Style="{StaticResource ResultCardStyle}"
                                         Margin="4,0,4,0">
                        <StackPanel>
                            <TextBlock Text="Akredytowanych" 
                                       VerticalAlignment="Top" 
                                       HorizontalAlignment="Center"
                                       FontSize="14"
                                       Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                            <TextBlock Text="{Binding LiczbaAkredytowanych}" 
                                       VerticalAlignment="Center" 
                                       HorizontalAlignment="Center"
                                       Padding="0,24"
                                       FontSize="38" 
                                       FontWeight="Bold"
                                       Foreground="#2E7D32"/>
                        </StackPanel>
                    </materialDesign:Card>

                    <materialDesign:Card Grid.Column="2" 
                                         Style="{StaticResource ResultCardStyle}"
                                         Margin="4,0,4,0">
                        <StackPanel>
                            <TextBlock Text="Procent Akredytacji" 
                                       VerticalAlignment="Top" 
                                       HorizontalAlignment="Center"
                                       FontSize="14"
                                       Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                            <TextBlock VerticalAlignment="Center" 
                                       HorizontalAlignment="Center"
                                       Padding="0,24"
                                       FontSize="38" 
                                       FontWeight="Bold"
                                       Foreground="{DynamicResource MaterialDesignBody}">
                                <TextBlock.Text>
                                    <MultiBinding StringFormat="{}{0:N1}%">
                                        <Binding Path="ProcentAkredytowanych"/>
                                    </MultiBinding>
                                </TextBlock.Text>
                            </TextBlock>
                        </StackPanel>
                    </materialDesign:Card>

                    <materialDesign:Card Grid.Column="3" 
                                         Style="{StaticResource ResultCardStyle}"
                                         Margin="4,0,0,0">
                        <StackPanel>
                            <TextBlock Text="Średnia Punktów"
                                       VerticalAlignment="Top" 
                                       HorizontalAlignment="Center"
                                       FontSize="14"
                                       Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                            <TextBlock Text="{Binding SredniaPunktow, StringFormat=N1}" 
                                       VerticalAlignment="Center" 
                                       HorizontalAlignment="Center"
                                       Padding="0,24"
                                       FontSize="38" 
                                       FontWeight="Bold"
                                       Foreground="{DynamicResource MaterialDesignBody}"/>
                        </StackPanel>
                    </materialDesign:Card>
                </Grid>

                <materialDesign:Card UniformCornerRadius="8" Padding="20" Margin="0,0,0,20">
                    <StackPanel>
                        <Grid Margin="0,0,0,16">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="Wyniki Akredytacji" 
                                       Style="{StaticResource SectionHeaderStyle}"
                                       Margin="0"/>

                            <Button Grid.Column="1"
                                    Style="{StaticResource MaterialDesignFlatButton}"
                                    Command="{Binding EksportujCommand}"
                                    ToolTip="Eksportuj do Excel">
                                <StackPanel Orientation="Horizontal">
                                    <materialIcons:MaterialIcon Kind="FileExcel" 
                                                               Width="16" Height="16" 
                                                               Margin="0,0,8,0"/>
                                    <TextBlock Text="Eksportuj" FontSize="17"/>
                                </StackPanel>
                            </Button>
                        </Grid>

                        <DataGrid ItemsSource="{Binding WynikiAkredytacji}"
                                  AutoGenerateColumns="False"
                                  CanUserAddRows="False"
                                  CanUserDeleteRows="False"
                                  IsReadOnly="True"
                                  SelectionMode="Single"
                                  HeadersVisibility="All"
                                  GridLinesVisibility="All"
                                  materialDesign:DataGridAssist.CellPadding="12,8"
                                  materialDesign:DataGridAssist.ColumnHeaderPadding="12,10">

                            <DataGrid.Columns>
                                <DataGridTextColumn Header="#" 
                                                    Binding="{Binding Pozycja}" 
                                                    Width="50"
                                                    >
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="FontWeight" Value="Bold"/>
                                            <Setter Property="Foreground" Value="{DynamicResource PrimaryHueMidBrush}"/>
                                            <Setter Property="VerticalAlignment" Value="Center"/>
                                            <Setter Property="HorizontalAlignment" Value="Center"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>

                                <DataGridTextColumn Header="Placówka" 
                                                    Binding="{Binding NazwaPlacowki}" 
                                                    Width="*" MinWidth="150">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="FontWeight" Value="Medium"/>
                                            <Setter Property="VerticalAlignment" Value="Center"/>
                                            <Setter Property="HorizontalAlignment" Value="Left"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>

                                <DataGridTemplateColumn Header="Oceny Zespołów" Width="140">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Vertical">
                                                <TextBlock HorizontalAlignment="Left">
                                                    <Run Text="Średnia: " FontSize="12" Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                                                    <Run Text="{Binding SredniaOcenaZespolow, StringFormat=N2}" FontWeight="SemiBold"/>
                                                </TextBlock>
                                                <TextBlock HorizontalAlignment="Left">
                                                    <Run Text="Liczba: " FontSize="12" Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                                                    <Run Text="{Binding LiczbaOcen}"/>
                                                </TextBlock>
                                                <TextBlock Text="{Binding PunktyZaOceny, StringFormat='Punkty: {0}/40'}" 
                                                          FontSize="12" 
                                                          FontWeight="Bold"
                                                          Foreground="#1976D2"
                                                          HorizontalAlignment="Left"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                                <DataGridTemplateColumn Header="Interwencje" Width="100">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Vertical">
                                                <TextBlock HorizontalAlignment="Left">
                                                    <Run Text="Liczba: " FontSize="12" Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                                                    <Run Text="{Binding LiczbaInterwencji}" FontWeight="SemiBold"/>
                                                </TextBlock>
                                                <TextBlock Text="{Binding PunktyZaInterwencje, StringFormat='Punkty: {0}/40'}" 
                                                          FontSize="12" 
                                                          FontWeight="Bold"
                                                          Foreground="#388E3C"
                                                          HorizontalAlignment="Left"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                                <DataGridTemplateColumn Header="Zasoby" Width="140">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Vertical">
                                                <TextBlock HorizontalAlignment="Left">
                                                    <Run Text="Zespoły: " FontSize="12" Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                                                    <Run Text="{Binding LiczbaAktywnychZespolow}"/>
                                                </TextBlock>
                                                <TextBlock HorizontalAlignment="Left">
                                                    <Run Text="Karetki: " FontSize="12" Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                                                    <Run Text="{Binding LiczbaAktywnychKaretek}"/>
                                                </TextBlock>
                                                <TextBlock Text="{Binding PunktyZaKaretki, StringFormat='Punkty: {0}/20'}" 
                                                          FontSize="12" 
                                                          FontWeight="Bold"
                                                          Foreground="#F57C00"
                                                          HorizontalAlignment="Left"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                                <DataGridTextColumn Header="Suma Punktów" 
                                                    Binding="{Binding LacznePunkty, StringFormat='{}{0}/100'}" 
                                                    Width="140">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="FontWeight" Value="Bold"/>
                                            <Setter Property="FontSize" Value="16"/>
                                            <Setter Property="HorizontalAlignment" Value="Center"/>
                                            <Setter Property="VerticalAlignment" Value="Center"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>

                                <DataGridTemplateColumn Header="Status" Width="180">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Border CornerRadius="12" 
                                                    Padding="12,6"
                                                    HorizontalAlignment="Center">
                                                <Border.Style>
                                                    <Style TargetType="Border">
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding KolorStatusu}" Value="Green">
                                                                <Setter Property="Background" Value="#E8F5E9"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding KolorStatusu}" Value="Red">
                                                                <Setter Property="Background" Value="#FFEBEE"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Border.Style>
                                                <TextBlock Text="{Binding StatusAkredytacji}"
                                                          HorizontalAlignment="Center"
                                                          VerticalAlignment="Center"
                                                          FontSize="12" 
                                                          FontWeight="SemiBold">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding KolorStatusu}" Value="Green">
                                                                    <Setter Property="Foreground" Value="#2E7D32"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding KolorStatusu}" Value="Red">
                                                                    <Setter Property="Foreground" Value="#C62828"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                            </Border>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                                <DataGridTextColumn Header="Rekomendacje" 
                                                    Binding="{Binding Rekomendacje}" 
                                                    Width="*" MinWidth="200">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="TextWrapping" Value="Wrap"/>
                                            <Setter Property="FontSize" Value="12"/>
                                            <Setter Property="Foreground" Value="{DynamicResource MaterialDesignBodyLight}"/>
                                            <Setter Property="VerticalAlignment" Value="Center"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                            </DataGrid.Columns>
                        </DataGrid>

                        <StackPanel Visibility="{Binding BrakDanych, Converter={StaticResource BooleanToVisibilityConverter}}"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Margin="0,40">
                            <materialIcons:MaterialIcon Kind="CheckDecagram" 
                                                       Width="64" Height="64"
                                                       Foreground="{DynamicResource MaterialDesignBodyLight}"
                                                       HorizontalAlignment="Center"/>
                            <TextBlock Text="Brak danych do wyświetlenia" 
                                      FontSize="16"
                                      Foreground="{DynamicResource MaterialDesignBodyLight}"
                                      HorizontalAlignment="Center"
                                      Margin="0,16,0,8"/>
                            <TextBlock Text="Oceń akredytację, aby zobaczyć wyniki" 
                                      FontSize="13"
                                      Foreground="{DynamicResource MaterialDesignBodyLight}"
                                      HorizontalAlignment="Center"/>
                        </StackPanel>
                    </StackPanel>
                </materialDesign:Card>

                <materialDesign:Card UniformCornerRadius="8" Padding="20">
                    <StackPanel>
                        <TextBlock Text="System Punktacji - Wyjaśnienie" 
                                   Style="{StaticResource SectionHeaderStyle}"/>

                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <Border Grid.Row="0" Background="#E3F2FD" Padding="16" Margin="0,0,0,8" CornerRadius="4">
                                <StackPanel>
                                    <TextBlock Text="✓ Oceny Zespołów (max 40 pkt)" FontWeight="SemiBold" FontSize="14" Foreground="#1976D2"/>
                                    <TextBlock Text="• Średnia ocena zespołów (0-25 pkt)" FontSize="12" Margin="16,4,0,0" Foreground="Black"/>
                                    <TextBlock Text="• Liczba zebranych ocen (0-15 pkt)" FontSize="12" Margin="16,2,0,0" Foreground="Black"/>
                                </StackPanel>
                            </Border>

                            <Border Grid.Row="1" Background="#E8F5E9" Padding="16" Margin="0,0,0,8" CornerRadius="4">
                                <StackPanel>
                                    <TextBlock Text="✓ Interwencje Medyczne (max 40 pkt)" FontWeight="SemiBold" FontSize="14" Foreground="#388E3C"/>
                                    <TextBlock Text="• Liczba udzielonych pomocy w okresie (0-40 pkt)" FontSize="12" Margin="16,4,0,0" Foreground="Black"/>
                                </StackPanel>
                            </Border>

                            <Border Grid.Row="2" Background="#FFF3E0" Padding="16" Margin="0,0,0,8" CornerRadius="4">
                                <StackPanel>
                                    <TextBlock Text="✓ Zasoby Operacyjne (max 20 pkt)" FontWeight="SemiBold" FontSize="14" Foreground="#F57C00"/>
                                    <TextBlock Text="• Liczba aktywnych zespołów (0-10 pkt)" FontSize="12" Margin="16,4,0,0" Foreground="Black"/>
                                    <TextBlock Text="• Liczba sprawnych karetek (0-10 pkt)" FontSize="12" Margin="16,2,0,0" Foreground="Black"/>
                                </StackPanel>
                            </Border>

                            <Border Grid.Row="3" Background="#C8E6C9" Padding="16" CornerRadius="4">
                                <StackPanel>
                                    <TextBlock FontSize="14" Foreground="#1B5E20">
                                        <Run Text="Próg akredytacji:" FontWeight="Bold"/>
                                        <Run Text="≥ 60 punktów na 100 możliwych" FontWeight="SemiBold"/>
                                    </TextBlock>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </StackPanel>
                </materialDesign:Card>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>