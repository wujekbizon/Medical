                <materialDesign:Card Style="{StaticResource ResultCardStyle}" Margin="0,0,0,20">
                    <StackPanel>
                        <Grid Margin="0,0,0,16">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Orientation="Horizontal">
                                <Border Background="#9D8FEF" Width="4" Height="16" CornerRadius="2" Margin="0,0,12,0"/>
                                <TextBlock Text="WYNIKI AKREDYTACJI" 
                           FontSize="14" FontWeight="Bold"
                           Foreground="{DynamicResource MaterialDesignBody}" Opacity="0.8"/>
                            </StackPanel>

                            <Button Grid.Column="1"
                    Style="{StaticResource MaterialDesignFlatButton}"
                    Command="{Binding EksportujCommand}"
                    Foreground="#81C784"
                    ToolTip="Eksportuj do Excel">
                                <StackPanel Orientation="Horizontal">
                                    <materialIcons:MaterialIcon Kind="FileExcel" Width="18" Height="18" Margin="0,0,8,0"/>
                                    <TextBlock Text="EKSPORTUJ" FontWeight="Bold" FontSize="13"/>
                                </StackPanel>
                            </Button>
                        </Grid>

                        <DataGrid ItemsSource="{Binding WynikiAkredytacji}"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  IsReadOnly="True"
                  Background="Transparent"
                  BorderThickness="0"
                  GridLinesVisibility="Horizontal"
                  HorizontalGridLinesBrush="#11FFFFFF"
                  RowBackground="Transparent"
                  materialDesign:DataGridAssist.CellPadding="12,12"
                  materialDesign:DataGridAssist.ColumnHeaderPadding="12,15">

                            <DataGrid.Resources>
                                <Style TargetType="DataGridColumnHeader" BasedOn="{StaticResource MaterialDesignDataGridColumnHeader}">
                                    <Setter Property="Background" Value="#15FFFFFF"/>
                                    <Setter Property="Foreground" Value="{DynamicResource MaterialDesignBody}"/>
                                    <Setter Property="FontWeight" Value="ExtraBold"/>
                                    <Setter Property="FontSize" Value="11"/>
                                    <Setter Property="BorderThickness" Value="0,0,0,1"/>
                                    <Setter Property="BorderBrush" Value="#33FFFFFF"/>
                                </Style>
                            </DataGrid.Resources>

                            <DataGrid.Columns>
                                <DataGridTextColumn Header="#" Binding="{Binding Pozycja}" Width="50">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="FontWeight" Value="Bold"/>
                                            <Setter Property="Foreground" Value="#9D8FEF"/>
                                            <Setter Property="VerticalAlignment" Value="Center"/>
                                            <Setter Property="HorizontalAlignment" Value="Center"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>

                                <DataGridTextColumn Header="PLACÓWKA" Binding="{Binding NazwaPlacowki}" Width="*" MinWidth="150">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="FontWeight" Value="SemiBold"/>
                                            <Setter Property="Foreground" Value="White"/>
                                            <Setter Property="VerticalAlignment" Value="Center"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>

                                <DataGridTemplateColumn Header="OCENY ZESPOŁÓW" Width="160">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Margin="0,4">
                                                <TextBlock>
                                    <Run Text="Średnia: " FontSize="11" Foreground="{DynamicResource MaterialDesignBody}"/>
                                    <Run Text="{Binding SredniaOcenaZespolow, StringFormat=N2}" Foreground="White"/>
                                                </TextBlock>
                                                <TextBlock Text="{Binding PunktyZaOceny, StringFormat='PUNKTY: {0}/40'}" 
                                           FontSize="11" FontWeight="Black" Foreground="#64B5F6" Margin="0,4,0,0"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                                <DataGridTemplateColumn Header="INTERWENCJE" Width="120">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel VerticalAlignment="Center">
                                                <TextBlock Text="{Binding LiczbaInterwencji, StringFormat='Ilość: {0}'}" FontSize="11" Opacity="0.7"/>
                                                <TextBlock Text="{Binding PunktyZaInterwencje, StringFormat='PUNKTY: {0}/40'}" 
                                           FontSize="11" FontWeight="Black" Foreground="#81C784"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                                <DataGridTextColumn Header="SUMA" Binding="{Binding LacznePunkty, StringFormat='{}{0}/100'}" Width="100">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="FontWeight" Value="Black"/>
                                            <Setter Property="FontSize" Value="15"/>
                                            <Setter Property="Foreground" Value="White"/>
                                            <Setter Property="HorizontalAlignment" Value="Center"/>
                                            <Setter Property="VerticalAlignment" Value="Center"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>

                                <DataGridTemplateColumn Header="STATUS" Width="150">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Border CornerRadius="4" Padding="8,4" HorizontalAlignment="Left" BorderThickness="1">
                                                <Border.Style>
                                                    <Style TargetType="Border">
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding KolorStatusu}" Value="Green">
                                                                <Setter Property="Background" Value="#112E7D32"/>
                                                                <Setter Property="BorderBrush" Value="#4481C784"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding KolorStatusu}" Value="Red">
                                                                <Setter Property="Background" Value="#11C62828"/>
                                                                <Setter Property="BorderBrush" Value="#44FF8A80"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Border.Style>
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" Text="{Binding StatusAkredytacji}" FontSize="10" FontWeight="Bold">
                                                        <TextBlock.Style>
                                                            <Style TargetType="TextBlock">
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding KolorStatusu}" Value="Green">
                                                                        <Setter Property="Foreground" Value="#81C784"/>
                                                                    </DataTrigger>
                                                                    <DataTrigger Binding="{Binding KolorStatusu}" Value="Red">
                                                                        <Setter Property="Foreground" Value="#FF8A80"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </TextBlock.Style>
                                                    </TextBlock>
                                                </StackPanel>
                                            </Border>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
