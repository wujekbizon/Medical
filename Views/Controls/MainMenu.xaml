<UserControl x:Class="Medical.Views.Controls.MainMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialIcons="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
             xmlns:helper="clr-namespace:Medical.Helper">

    <Menu x:Name="TopMenu"
          Height="40"
          Padding="8,0"
          Background="{StaticResource MenuBackgroundBrush}">

        <MenuItem x:Name="MenuPlik" Style="{StaticResource IndustrialMenuItemStyle}">
            <MenuItem.Header>
                <TextBlock>
                <Run TextDecorations="Underline" Text="P" Foreground="{DynamicResource AccentPurpleLight}" FontWeight="SemiBold"/>
                <Run Text="lik" Foreground="White"/>
                </TextBlock>
            </MenuItem.Header>
            <MenuItem Header="Nowy" 
                  InputGestureText="Ctrl+N"
                  Style="{StaticResource IndustrialMenuItemStyle}">
                <MenuItem.Icon>
                    <materialIcons:MaterialIcon Kind="FilePlus" 
                                          Width="16" 
                                          Height="16"
                                          Foreground="{DynamicResource AccentPurple}"/>
                </MenuItem.Icon>
            </MenuItem>
            <MenuItem Header="Otwórz" 
                  InputGestureText="Ctrl+O"
                  Style="{StaticResource IndustrialMenuItemStyle}">
                <MenuItem.Icon>
                    <materialIcons:MaterialIcon Kind="FolderOpen" 
                                          Width="16" 
                                          Height="16"
                                          Foreground="{DynamicResource AccentPurple}"/>
                </MenuItem.Icon>
            </MenuItem>
            <Separator Style="{StaticResource IndustrialSeparatorStyle}"/>
            <MenuItem Header="Ustawienia" 
                  InputGestureText="Ctrl+,"
                  Style="{StaticResource IndustrialMenuItemStyle}">
                <MenuItem.Icon>
                    <materialIcons:MaterialIcon Kind="Cog" 
                                          Width="16" 
                                          Height="16"
                                          Foreground="{DynamicResource AccentPurple}"/>
                </MenuItem.Icon>
            </MenuItem>
            <Separator Style="{StaticResource IndustrialSeparatorStyle}"/>
            <MenuItem Header="Wyjście" 
                  InputGestureText="Ctrl+Q" 
                  Command="{x:Static helper:MenuCommands.Exit}"
                  Style="{StaticResource IndustrialMenuItemStyle}">
                <MenuItem.Icon>
                    <materialIcons:MaterialIcon Kind="ExitToApp" 
                                          Width="16" 
                                          Height="16"
                                          Foreground="#FF4444"/>
                </MenuItem.Icon>
            </MenuItem>
        </MenuItem>

        <MenuItem x:Name="MenuPacjenci" Style="{StaticResource IndustrialMenuItemStyle}">
            <MenuItem.Header>
                <TextBlock>
                <Run Text="P" Foreground="White"/>
                <Run TextDecorations="Underline" Text="a" Foreground="{DynamicResource AccentPurpleLight}" FontWeight="SemiBold"/>
                <Run Text="cjenci" Foreground="White"/>
                </TextBlock>
            </MenuItem.Header>
            <MenuItem Header="Wszyscy Pacjenci" 
                  InputGestureText="Ctrl+Shift+A"
                  Style="{StaticResource IndustrialMenuItemStyle}">
                <MenuItem.Icon>
                    <materialIcons:MaterialIcon Kind="AccountMultiple" 
                                          Width="16" 
                                          Height="16"
                                          Foreground="{DynamicResource AccentPurple}"/>
                </MenuItem.Icon>
            </MenuItem>
            <MenuItem Header="Nowy Pacjent" 
                  InputGestureText="Ctrl+Shift+P"
                  Style="{StaticResource IndustrialMenuItemStyle}">
                <MenuItem.Icon>
                    <materialIcons:MaterialIcon Kind="AccountPlus" 
                                          Width="16" 
                                          Height="16"
                                          Foreground="{DynamicResource AccentPurple}"/>
                </MenuItem.Icon>
            </MenuItem>
        </MenuItem>

        <MenuItem x:Name="MenuZespoly" Style="{StaticResource IndustrialMenuItemStyle}">
            <MenuItem.Header>
                <TextBlock>
                <Run TextDecorations="Underline" Text="Z" Foreground="{DynamicResource AccentPurpleLight}" FontWeight="SemiBold"/>
                <Run Text="espoły" Foreground="White"/>
                </TextBlock>
            </MenuItem.Header>
            <MenuItem Header="Zespoły Ratunkowe" 
                  InputGestureText="Ctrl+Shift+T"
                  Style="{StaticResource IndustrialMenuItemStyle}">
                <MenuItem.Icon>
                    <materialIcons:MaterialIcon Kind="Ambulance" 
                                          Width="16" 
                                          Height="16"
                                          Foreground="{DynamicResource AccentPurple}"/>
                </MenuItem.Icon>
            </MenuItem>
            <MenuItem Header="Pracownicy" 
                  InputGestureText="Ctrl+Shift+E"
                  Style="{StaticResource IndustrialMenuItemStyle}">
                <MenuItem.Icon>
                    <materialIcons:MaterialIcon Kind="PeopleGroup" 
                                          Width="16" 
                                          Height="16"
                                          Foreground="{DynamicResource AccentPurple}"/>
                </MenuItem.Icon>
            </MenuItem>
            <Separator Style="{StaticResource IndustrialSeparatorStyle}"/>
            <MenuItem Header="Nowe Zlecenie Wyjazdu" 
                  InputGestureText="Ctrl+Shift+D"
                  Style="{StaticResource IndustrialMenuItemStyle}">
                <MenuItem.Icon>
                    <materialIcons:MaterialIcon Kind="ClipboardText" 
                                          Width="16" 
                                          Height="16"
                                          Foreground="{DynamicResource AccentPurple}"/>
                </MenuItem.Icon>
            </MenuItem>
        </MenuItem>

        <MenuItem x:Name="MenuPomoc" Style="{StaticResource IndustrialMenuItemStyle}">
            <MenuItem.Header>
                <TextBlock>
                <Run TextDecorations="Underline" Text="H" Foreground="{DynamicResource AccentPurpleLight}" FontWeight="SemiBold"/>
                <Run Text="elp" Foreground="White"/>
                </TextBlock>
            </MenuItem.Header>
            <MenuItem Header="Dokumentacja" 
                  InputGestureText="F1"
                  Style="{StaticResource IndustrialMenuItemStyle}">
                <MenuItem.Icon>
                    <materialIcons:MaterialIcon Kind="BookOpen" 
                                          Width="16" 
                                          Height="16"
                                          Foreground="{DynamicResource AccentPurple}"/>
                </MenuItem.Icon>
            </MenuItem>
            <MenuItem Header="O programie" 
                  InputGestureText="Shift+F1"
                  Style="{StaticResource IndustrialMenuItemStyle}">
                <MenuItem.Icon>
                    <materialIcons:MaterialIcon Kind="Information" 
                                          Width="16" 
                                          Height="16"
                                          Foreground="{DynamicResource AccentPurple}"/>
                </MenuItem.Icon>
            </MenuItem>
        </MenuItem>
    </Menu>
</UserControl>