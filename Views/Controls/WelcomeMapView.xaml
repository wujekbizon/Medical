<UserControl x:Class="Medical.Views.Controls.WelcomeMapView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialIcons="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
             xmlns:gmaps="clr-namespace:GMap.NET.WindowsPresentation;assembly=GMap.NET.WindowsPresentation">
    <UserControl.Resources>
        <Storyboard x:Key="FadeInContent">
            <DoubleAnimation 
                Storyboard.TargetName="WelcomeContent"
                Storyboard.TargetProperty="Opacity"
                From="0" To="1" Duration="0:0:0.5"
                BeginTime="0:0:0.3"/>
        </Storyboard>

        <Storyboard x:Key="IconPulse" RepeatBehavior="Forever">
            <DoubleAnimation 
                Storyboard.TargetName="MainIcon"
                Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                From="1" To="1.05" Duration="0:0:2"
                AutoReverse="True">
                <DoubleAnimation.EasingFunction>
                    <SineEase EasingMode="EaseInOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation 
                Storyboard.TargetName="MainIcon"
                Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                From="1" To="1.05" Duration="0:0:2"
                AutoReverse="True">
                <DoubleAnimation.EasingFunction>
                    <SineEase EasingMode="EaseInOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>
    </UserControl.Resources>

    <Grid>
        <gmaps:GMapControl x:Name="MapControl"
                   Zoom="12"
                   MinZoom="2"
                   MaxZoom="18"
                   MouseWheelZoomType="MousePositionAndCenter"
                   CanDragMap="True"
                   Opacity="0.4"/>

        <Canvas x:Name="MapPlaceholder" ClipToBounds="True" Opacity="0.15">
            <Canvas.Background>
                <DrawingBrush TileMode="Tile" Viewport="0,0,100,100" ViewportUnits="Absolute">
                    <DrawingBrush.Drawing>
                        <GeometryDrawing>
                            <GeometryDrawing.Pen>
                                <Pen Brush="{DynamicResource AccentPurple}" Thickness="0.5"/>
                            </GeometryDrawing.Pen>
                            <GeometryDrawing.Geometry>
                                <GeometryGroup>
                                    <LineGeometry StartPoint="0,50" EndPoint="100,50"/>
                                    <LineGeometry StartPoint="50,0" EndPoint="50,100"/>
                                    <LineGeometry StartPoint="0,25" EndPoint="100,25"/>
                                    <LineGeometry StartPoint="0,75" EndPoint="100,75"/>
                                    <LineGeometry StartPoint="25,0" EndPoint="25,100"/>
                                    <LineGeometry StartPoint="75,0" EndPoint="75,100"/>
                                    <LineGeometry StartPoint="0,0" EndPoint="50,50"/>
                                    <LineGeometry StartPoint="50,50" EndPoint="100,100"/>
                                </GeometryGroup>
                            </GeometryDrawing.Geometry>
                        </GeometryDrawing>
                    </DrawingBrush.Drawing>
                </DrawingBrush>
            </Canvas.Background>
            <Ellipse Canvas.Left="150" Canvas.Top="200" Width="12" Height="12" Fill="{DynamicResource AccentPurple}" Opacity="0.6">
                <Ellipse.Triggers>
                    <EventTrigger RoutedEvent="Loaded">
                        <BeginStoryboard>
                            <Storyboard RepeatBehavior="Forever">
                                <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0.3" To="0.8" Duration="0:0:1.5" AutoReverse="True"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                </Ellipse.Triggers>
            </Ellipse>
            <Ellipse Canvas.Left="300" Canvas.Top="150" Width="8" Height="8" Fill="{DynamicResource AccentBlue}" Opacity="0.5">
                <Ellipse.Triggers>
                    <EventTrigger RoutedEvent="Loaded">
                        <BeginStoryboard>
                            <Storyboard RepeatBehavior="Forever" BeginTime="0:0:0.5">
                                <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0.2" To="0.7" Duration="0:0:2" AutoReverse="True"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                </Ellipse.Triggers>
            </Ellipse>
            <Ellipse Canvas.Left="450" Canvas.Top="280" Width="10" Height="10" Fill="{DynamicResource AccentPurple}" Opacity="0.4">
                <Ellipse.Triggers>
                    <EventTrigger RoutedEvent="Loaded">
                        <BeginStoryboard>
                            <Storyboard RepeatBehavior="Forever" BeginTime="0:0:1">
                                <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0.2" To="0.6" Duration="0:0:1.8" AutoReverse="True"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                </Ellipse.Triggers>
            </Ellipse>
            <Ellipse Canvas.Left="200" Canvas.Top="350" Width="6" Height="6" Fill="{DynamicResource AccentBlue}" Opacity="0.5">
                <Ellipse.Triggers>
                    <EventTrigger RoutedEvent="Loaded">
                        <BeginStoryboard>
                            <Storyboard RepeatBehavior="Forever" BeginTime="0:0:0.8">
                                <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0.3" To="0.8" Duration="0:0:1.3" AutoReverse="True"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                </Ellipse.Triggers>
            </Ellipse>
        </Canvas>

        <Rectangle x:Name="OverlayRectangle">
            <Rectangle.Fill>
                <RadialGradientBrush Center="0.5,0.5" RadiusX="0.8" RadiusY="0.8">
                    <GradientStop Color="#CC121212" Offset="0"/>
                    <GradientStop Color="#EE121212" Offset="1"/>
                </RadialGradientBrush>
            </Rectangle.Fill>
        </Rectangle>
        <Grid x:Name="WelcomeContent">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <Border Background="{DynamicResource DarkSurfaceVariant}"
                        CornerRadius="50"
                        Padding="20"
                        HorizontalAlignment="Center"
                        Margin="0,0,0,24">
                    <Border.Effect>
                        <DropShadowEffect Color="#000000" BlurRadius="20" Opacity="0.5" ShadowDepth="0"/>
                    </Border.Effect>
                    <materialIcons:MaterialIcon 
                        x:Name="MainIcon"
                        Kind="Ambulance"
                        Width="64" Height="64"
                        Foreground="{DynamicResource AccentPurple}"
                        RenderTransformOrigin="0.5,0.5">
                        <materialIcons:MaterialIcon.RenderTransform>
                            <ScaleTransform ScaleX="1" ScaleY="1"/>
                        </materialIcons:MaterialIcon.RenderTransform>
                    </materialIcons:MaterialIcon>
                </Border>

                <TextBlock FontSize="28"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,8">
                    <Run Text="Witaj w " Foreground="{DynamicResource TextPrimary}"/>
                    <Run Text="Medical System" Foreground="{DynamicResource AccentPurple}"/>
                </TextBlock>
                <TextBlock Text="System Zarządzania Ratownictwem Medycznym"
                           FontSize="14"
                           Foreground="{DynamicResource TextSecondary}"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,32"/>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>