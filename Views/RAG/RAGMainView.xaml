<UserControl x:Class="Medical.Views.RAG.RAGMainView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:materialIcons="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
             xmlns:local="clr-namespace:Medical.Views.RAG"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="{DynamicResource IndustrialGunmetal}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <materialDesign:Card Grid.Row="0" 
                            Padding="24"
                            Style="{StaticResource CardStyle}"
                            Margin="16,16,16,8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <materialIcons:MaterialIcon Kind="Brain" 
                                                Width="32" Height="32"
                                                Foreground="#9D8FEF"
                                                VerticalAlignment="Center"
                                                Margin="0,0,12,0"/>
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="RAG AI Assistant" 
                                   FontSize="18" 
                                   FontWeight="Light"
                                   Foreground="White"/>
                    </StackPanel>
                </StackPanel>

                <StackPanel Grid.Column="2" 
                            Orientation="Horizontal"
                            VerticalAlignment="Center">
                    <Button Command="{Binding CreateStoreCommand}"
                            Style="{StaticResource MaterialDesignRaisedButton}"
                            Background="#9D8FEF"
                            Height="36"
                            Margin="0,0,8,0">
                        <StackPanel Orientation="Horizontal">
                            <materialIcons:MaterialIcon Kind="Plus" Width="18" Height="18" Margin="0,0,8,0" Foreground="White"/>
                            <TextBlock Text="Utwórz Store" Foreground="White"/>
                        </StackPanel>
                    </Button>

                    <Button Command="{Binding RefreshStoresCommand}"
                            Style="{StaticResource MaterialDesignOutlinedButton}"
                            BorderBrush="#44FFFFFF"
                            Height="36"
                            Width="54"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center">
                        <materialIcons:MaterialIcon Kind="Refresh" Width="20" Height="20" Foreground="White"/>
                    </Button>
                </StackPanel>
            </Grid>
        </materialDesign:Card>

        <Grid Grid.Row="1" Margin="16,8,16,8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="16"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <materialDesign:Card Grid.Column="0" 
                                Padding="24"
                                Style="{StaticResource CardStyle}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <StackPanel Orientation="Horizontal" Margin="0,0,0,24">
                        <Border Background="#9D8FEF" Width="4" Height="16" CornerRadius="2" Margin="0,0,12,0"/>
                        <TextBlock Text="File Search Stores" 
                                   FontSize="15"
                                   FontWeight="Light"
                                   Foreground="White"
                                   VerticalAlignment="Center"/>
                    </StackPanel>

                    <ListBox Grid.Row="1" 
                             ItemsSource="{Binding Stores}"
                             SelectedItem="{Binding SelectedStore}"
                             Background="Transparent"
                             BorderThickness="0">
                                            <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="Padding" Value="0"/>
                                <Setter Property="Margin" Value="0"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ListBoxItem">
                                            <ContentPresenter/>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ListBox.ItemContainerStyle>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border x:Name="ItemBorder"
                                        Background="#1E2124" 
                                        CornerRadius="4"
                                        Padding="12"
                                        Margin="0,0,0,8">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <TextBlock Grid.Row="0" 
                                                   Text="{Binding DisplayName}"
                                                   FontWeight="Light"
                                                   FontSize="14"
                                                   Foreground="White"/>

                                        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,8,0,0">
                                            <materialIcons:MaterialIcon Kind="FileDocument" 
                                                   Width="14" 
                                                   Height="14" 
                                                   Margin="0,0,5,0" 
                                                   Foreground="#9D8FEF"/>
                                            <TextBlock Text="{Binding TotalDocuments, StringFormat='{}{0} documents'}" 
                                                       FontSize="11"
                                                       Foreground="#CCFFFFFF"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                                <DataTemplate.Triggers>
                                    <DataTrigger Binding="{Binding IsSelected, RelativeSource={RelativeSource AncestorType=ListBoxItem}}" Value="True">
                                        <Setter TargetName="ItemBorder" Property="Background" Value="{DynamicResource IndustrialHighlight}"/>
                                        <Setter TargetName="ItemBorder" Property="BorderBrush" Value="{DynamicResource AccentPurpleLight}"/>
                                        <Setter TargetName="ItemBorder" Property="BorderThickness" Value="0.5"/>
                                    </DataTrigger>
                                </DataTemplate.Triggers>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <StackPanel Grid.Row="2" Margin="0,16,0,0">
                        <Button Content="Dodaj Dokument" 
                                Command="{Binding UploadDocumentCommand}"
                                Style="{StaticResource MaterialDesignRaisedButton}"
                                Background="#9D8FEF"
                                Foreground="White"
                                Height="36"
                                Margin="0,0,0,12"/>
                        <Button Content="Usuń Store" 
                                Command="{Binding DeleteStoreCommand}"
                                Style="{StaticResource MaterialDesignOutlinedButton}"
                                BorderBrush="#44FFFFFF"
                                Foreground="White"
                                Height="36"/>
                    </StackPanel>
                </Grid>
            </materialDesign:Card>

            <ContentControl Grid.Column="2" 
                            Content="{Binding QueryViewModel}"/>
        </Grid>

           <materialDesign:Card Grid.Row="2" 
                            Padding="20,12"
                            Style="{StaticResource CardStyle}"
                            Margin="16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <ProgressBar Grid.Column="0"
                             Width="20" Height="20"
                             Style="{StaticResource MaterialDesignCircularProgressBar}"
                             IsIndeterminate="True"
                             Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}"
                             Margin="0,0,10,0"/>

                <TextBlock Grid.Column="1" 
                           Text="{Binding StatusMessage}"
                           FontSize="12"
                           VerticalAlignment="Center"
                           Foreground="#CCFFFFFF"/>
            </Grid>
        </materialDesign:Card>
    </Grid>
</UserControl>
