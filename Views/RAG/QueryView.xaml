<UserControl x:Class="Medical.Views.RAG.QueryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:materialIcons="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
             xmlns:local="clr-namespace:Medical.Views.RAG" xmlns:rag="clr-namespace:Medical.ViewModels.RAG" xmlns:helper="clr-namespace:Medical.Helper"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <materialDesign:Card Grid.Row="0" 
                            Margin="0,0,0,16" 
                            Padding="24"
                            Style="{StaticResource CardStyle}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel Orientation="Horizontal" Margin="0,0,0,24">
                    <Border Background="#9D8FEF" Width="4" Height="16" CornerRadius="2" Margin="0,0,12,0"/>
                    <TextBlock Text="Zadaj pytanie" 
                               FontSize="15"
                               FontWeight="Light"
                               Foreground="White"
                               VerticalAlignment="Center"/>
                </StackPanel>

                <TextBox Grid.Row="1"
                         Text="{Binding QueryText, UpdateSourceTrigger=PropertyChanged}"
                         materialDesign:HintAssist.Hint="Wpisz tutaj pytanie..."
                         BorderBrush="#44FFFFFF"
                         Foreground="White"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         AcceptsReturn="True"
                         MinHeight="60"
                         MaxHeight="150"
                         TextWrapping="Wrap"
                         VerticalScrollBarVisibility="Auto"
                         Margin="0,0,0,16"/>

                <StackPanel Grid.Row="2" 
                            Orientation="Horizontal" 
                            HorizontalAlignment="Right">
                    <Button Content="Wyczyść" 
                            Command="{Binding ClearQueryCommand}"
                            Style="{StaticResource MaterialDesignOutlinedButton}"
                            BorderBrush="#44FFFFFF"
                            Foreground="White"
                            Height="36"
                            Width="100"
                            Margin="0,0,12,0"/>
                    <Button Command="{Binding ExecuteQueryCommand}"
                            Style="{StaticResource MaterialDesignRaisedButton}"
                            Background="#9D8FEF"
                            Height="36">
                        <StackPanel Orientation="Horizontal">
                            <materialIcons:MaterialIcon Kind="SendOutline" Width="18" Height="18" Margin="0,0,8,0" Foreground="White"/>
                            <TextBlock Text="Zapytaj AI" Foreground="White"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
        </materialDesign:Card>

        <ScrollViewer Grid.Row="1"
                      Style="{StaticResource IndustrialScrollViewer}"
                      VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <materialDesign:Card Padding="24" 
                                     Style="{StaticResource CardStyle}"
                                     Margin="0,0,0,16"
                                     Visibility="{Binding IsQuerying, Converter={StaticResource BoolToVisibilityConverter}}">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <ProgressBar Style="{StaticResource MaterialDesignCircularProgressBar}"
                                     Width="24" Height="24"
                                     IsIndeterminate="True"
                                     Margin="0,0,10,0"/>
                        <TextBlock Text="Przeszukiwanie bazy wiedzy..." 
                                   VerticalAlignment="Center"
                                   Foreground="#CCFFFFFF"/>
                    </StackPanel>
                </materialDesign:Card>

                <materialDesign:Card Padding="24" 
                                     Style="{StaticResource CardStyle}"
                                     Margin="0,0,0,16"
                                     Visibility="{Binding CzyJestOdpowiedz, Converter={StaticResource BoolToVisibilityConverter}}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,16">
                            <Border Background="#9D8FEF" Width="4" Height="16" CornerRadius="2" Margin="0,0,12,0" VerticalAlignment="Center"/>
                            <materialIcons:MaterialIcon Kind="Brain" 
                                                        Width="20" Height="20"
                                                        Foreground="#9D8FEF"
                                                        Margin="0,0,8,0"
                                                        VerticalAlignment="Center"/>
                            <TextBlock Text="AI Odpowiedz" 
                                       FontSize="14"
                                       FontWeight="Light"
                                       Foreground="White"
                                       VerticalAlignment="Center"/>
                        </StackPanel>

                        <TextBlock Grid.Row="1" 
                                   Text="{Binding CurrentResponse.ResponseText}"
                                   TextWrapping="Wrap"
                                   FontSize="13"
                                   LineHeight="22"
                                   Foreground="White"
                                   Margin="0,0,0,16"/>

                        <TextBlock Grid.Row="2"
                                   Text="{Binding CurrentResponse.ProcessingTimeMs, StringFormat='Czas reakcji: {0}ms'}" 
                                   FontSize="11"
                                   Foreground="#CCFFFFFF"/>
                    </Grid>
                </materialDesign:Card>

                <materialDesign:Card Padding="24"
                                     Style="{StaticResource CardStyle}"
                                     Visibility="{Binding Citations.Count, Converter={StaticResource CountToVisibilityConverter}}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,16">
                            <Border Background="#9D8FEF" Width="4" Height="16" CornerRadius="2" Margin="0,0,12,0" VerticalAlignment="Center"/>
                            <materialIcons:MaterialIcon Kind="FileDocumentOutline" 
                                                        Width="18" Height="18"
                                                        Foreground="#9D8FEF"
                                                        Margin="0,0,8,0"
                                                        VerticalAlignment="Center"/>
                            <TextBlock Text="Źródła" 
                                       FontSize="14"
                                       FontWeight="Light"
                                       Foreground="White"
                                       VerticalAlignment="Center"/>
                        </StackPanel>

                        <ItemsControl Grid.Row="1" ItemsSource="{Binding Citations}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#1E2124"
                                            CornerRadius="4"
                                            Padding="12"
                                            Margin="0,0,0,8">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>

                                            <TextBlock Grid.Row="0" 
                                                       Text="{Binding SourceDocument}"
                                                       FontWeight="Light"
                                                       FontSize="12"
                                                       Foreground="White"
                                                       Margin="0,0,0,8"/>

                                            <TextBlock Grid.Row="1" 
                                                       Text="{Binding Excerpt}"
                                                       TextWrapping="Wrap"
                                                       FontSize="11"
                                                       Foreground="#CCFFFFFF"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Grid>
                </materialDesign:Card>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
